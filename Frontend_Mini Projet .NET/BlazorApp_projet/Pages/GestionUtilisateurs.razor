@page "/gestion-utilisateur"
@using BlazorApp1.Models
@using BlazorApp1.Services
@inject IUserService UserService
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>Gestion des Utilisateurs - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-users-cog icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Gestion des Utilisateurs</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>

                        <span class="sep">/</span>

                        <span class="current">
                            <i class="fas fa-users-cog"></i> Gestion des utilisateurs
                        </span>
                    </nav>

                </div>
                <div class="header-right">
                      
                
                        <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </div>

            
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Utilisateurs</h2>
                        <p>Administrez les comptes, rôles et permissions du système</p>

                        <div class="welcome-actions">
                           
                            <button class="btn btn-outline" @onclick="() => showSearchFilters = !showSearchFilters">
                                <i class="fas fa-search icon-float me-2"></i>
                                Recherche Avancée
                            </button>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick="() => FilterByRole(null)">
                            <div class="mini-ico">
                                <i class="fas fa-users icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total</div>
                                <div class="mini-value">@totalUsers</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByRole("Client")'>
                            <div class="mini-ico">
                                <i class="fas fa-user-tie icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Clients</div>
                                <div class="mini-value">@clientsCount</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick="FilterResponsableSAV">
                            <div class="mini-ico">
                                <i class="fas fa-headset icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Responsables</div>
                                <div class="mini-value">@responsablesCount</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="welcome-stats">
                    <div class="stat-card">
                        <div class="stat-ico">
                            <i class="fas fa-user-shield icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@adminsCount</h3>
                            <p>Administrateurs</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico success">
                            <i class="fas fa-user-check icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@activeUsers</h3>
                            <p>Actifs aujourd'hui</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico info">
                            <i class="fas fa-cogs icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>3</h3>
                            <p>Rôles disponibles</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico warn">
                            <i class="fas fa-sync-alt icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>Dernière MAJ</h3>
                            <p>@lastUpdate</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Advanced Search Panel -->
            @if (showSearchFilters)
            {
                <section class="panel search-section">
                    <div class="panel-head">
                        <h2 class="section-title">Recherche Avancée</h2>
                        <button class="link" @onclick="() => showSearchFilters = false">
                            <i class="fas fa-times"></i> Fermer
                        </button>
                    </div>

                    <div class="search-form">
                        <div class="search-grid">
                            <div class="form-group">
                                <label for="searchEmail">Email</label>
                                <input type="email" id="searchEmail" class="form-input"
                                       @bind="searchEmail" @bind:event="oninput"
                                       placeholder="email@exemple.com" />
                            </div>

                            <div class="form-group">
                                <label for="searchName">Nom complet</label>
                                <input type="text" id="searchName" class="form-input"
                                       @bind="searchName" @bind:event="oninput"
                                       placeholder="Jean Dupont" />
                            </div>

                            <div class="form-group">
                                <label for="searchRole">Rôle</label>
                                <select id="searchRole" class="form-select" @bind="searchRole">
                                    <option value="">Tous les rôles</option>
                                    <option value="Client">Client</option>
                                    <option value="ResponsableSAV">Responsable SAV</option>
                                    <option value="Admin">Administrateur</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="searchDate">Date de création</label>
                                <select id="searchDate" class="form-select" @bind="searchDate">
                                    <option value="">Toutes les dates</option>
                                    <option value="today">Aujourd'hui</option>
                                    <option value="week">Cette semaine</option>
                                    <option value="month">Ce mois</option>
                                </select>
                            </div>
                        </div>

                        <div class="search-actions">
                            <button class="btn btn-primary" @onclick="ApplyFilters">
                                <i class="fas fa-search me-2"></i>Rechercher
                            </button>
                            <button class="btn btn-outline" @onclick="ResetFilters">
                                <i class="fas fa-redo me-2"></i>Réinitialiser
                            </button>
                        </div>
                    </div>
                </section>
            }

            <!-- Main Users Panel -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">Liste des Utilisateurs</h2>
                    <div class="table-actions">
                        <div class="quick-search">
                            <i class="fas fa-search"></i>
                            <input type="text" 
                                   placeholder="Recherche rapide..." 
                                   @bind="quickSearch" 
                                   @bind:event="oninput" />
                        </div>
                        <button class="btn-icon" title="Actualiser" @onclick="LoadUsers">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                        <button class="btn-icon" title="Exporter" @onclick="ExportUsers">
                            <i class="fas fa-download"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des utilisateurs...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadUsers">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredUsers.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-users-slash"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucun utilisateur trouvé</h4>
                            <p>Commencez par créer votre premier utilisateur</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-user-plus me-2"></i>
                            Créer un utilisateur
                        </button>
                    </div>
                }
                else
                {
                    <!-- Users Table -->
                    <div class="table-responsive slide-up">
                        <table class="users-table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="table-header">
                                            <span>Utilisateur</span>
                                        </div>
                                    </th>
                                    <th>Nom Complet</th>
                                    <th>Email</th>
                                    <th>Rôles</th>
                                    <th>Date de création</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in filteredUsers)
                                {
                                    <tr class="user-row fade-in">
                                        <td>
                                            <div class="user-cell">
                                                <div class="user-avatar-small">
                                                    @if (user.Roles != null && user.Roles.Contains("Admin"))
                                                    {
                                                        <i class="fas fa-crown"></i>
                                                    }
                                                    else if (user.Roles != null && user.Roles.Contains("ResponsableSAV"))
                                                    {
                                                        <i class="fas fa-headset"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-user"></i>
                                                    }
                                                </div>
                                                <div class="user-info">
                                                    <strong>@user.Username</strong>
                                                    <small class="user-id">ID: @user.Id.Substring(0, Math.Min(8, user.Id.Length))...</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="user-fullname">
                                                @user.FirstName @user.LastName
                                                @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                                {
                                                    <small class="user-phone">
                                                        <i class="fas fa-phone"></i> @user.PhoneNumber
                                                    </small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <a href="mailto:@user.Email" class="email-link">
                                                <i class="fas fa-envelope me-1"></i>
                                                @user.Email
                                            </a>
                                        </td>
                                        <td>
                                            <div class="roles-container">
                                                @if (user.Roles != null && user.Roles.Any())
                                                {
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        <span class="role-badge @GetRoleClass(role)">
                                                            @GetRoleIcon(role) @role
                                                        </span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="role-badge none">Aucun rôle</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="date-cell">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                @user.CreatedAt.ToString("dd/MM/yyyy")
                                            </div>
                                        </td>
                                        <td>
                                            <div class="actions-cell">
                                                <button class="btn-action edit" 
                                                        title="Modifier" 
                                                        @onclick="() => ShowEditModal(user)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn-action role" 
                                                        title="Gérer les rôles" 
                                                        @onclick="() => ShowRoleModal(user)">
                                                    <i class="fas fa-user-tag"></i>
                                                </button>
                                                <button class="btn-action delete" 
                                                        title="Supprimer" 
                                                        @onclick="() => ConfirmDelete(user)">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <div class="pagination slide-up">
                            <button class="pagination-btn @(currentPage <= 1 ? "disabled" : "")" 
                                    @onclick="PreviousPage">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            
                            @if (currentPage > 3)
                            {
                                <button class="pagination-btn" @onclick="() => GoToPage(1)">
                                    1
                                </button>
                                <span class="pagination-ellipsis">...</span>
                            }
                            
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <button class="pagination-btn @(currentPage == i ? "active" : "")" 
                                        @onclick="() => GoToPage(i)">
                                    @i
                                </button>
                            }
                            
                            @if (currentPage < totalPages - 2)
                            {
                                <span class="pagination-ellipsis">...</span>
                                <button class="pagination-btn" @onclick="() => GoToPage(totalPages)">
                                    @totalPages
                                </button>
                            }
                            
                            <button class="pagination-btn @(currentPage >= totalPages ? "disabled" : "")" 
                                    @onclick="NextPage">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    }

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, filteredUsers.Count + (currentPage - 1) * pageSize)</strong> 
                            sur <strong>@users.Count</strong> utilisateurs
                        </span>
                   
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-users-cog"></i>
                    Gestion des Utilisateurs © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-database"></i> @users.Count utilisateurs
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create User -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-user-plus me-2"></i>
                        <h3>Créer un nouvel utilisateur</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="modal-body">
                    <EditForm Model="@newUser" OnValidSubmit="CreateUser">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="username" class="form-label">
                                    <i class="fas fa-user"></i> Nom d'utilisateur *
                                </label>
                                <InputText id="username" class="form-input" @bind-Value="newUser.Username" />
                                <ValidationMessage For="@(() => newUser.Username)" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email *
                                </label>
                                <InputText id="email" type="email" class="form-input" @bind-Value="newUser.Email" />
                                <ValidationMessage For="@(() => newUser.Email)" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label for="firstname" class="form-label">
                                    <i class="fas fa-user"></i> Prénom *
                                </label>
                                <InputText id="firstname" class="form-input" @bind-Value="newUser.FirstName" />
                                <ValidationMessage For="@(() => newUser.FirstName)" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label for="lastname" class="form-label">
                                    <i class="fas fa-user"></i> Nom *
                                </label>
                                <InputText id="lastname" class="form-input" @bind-Value="newUser.LastName" />
                                <ValidationMessage For="@(() => newUser.LastName)" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label for="password" class="form-label">
                                    <i class="fas fa-lock"></i> Mot de passe *
                                </label>
                                <InputText id="password" type="password" class="form-input" @bind-Value="newUser.Password" />
                                <ValidationMessage For="@(() => newUser.Password)" class="form-error" />
                            </div>
                            
                            <div class="form-group">
                                <label for="role" class="form-label">
                                    <i class="fas fa-user-tag"></i> Rôle principal *
                                </label>
                                <select id="role" class="form-select" @bind="newUser.Role">
                                    <option value="">Sélectionner un rôle</option>
                                    <option value="Client">Client</option>
                                    <option value="ResponsableSAV">Responsable SAV</option>
                                    <option value="Admin">Administrateur</option>
                                </select>
                                <ValidationMessage For="@(() => newUser.Role)" class="form-error" />
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="phone" class="form-label">
                                    <i class="fas fa-phone"></i> Téléphone
                                </label>
                                <InputText id="phone" class="form-input" @bind-Value="newUser.PhoneNumber" />
                            </div>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                                @if (isCreating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-plus-circle me-2"></i>
                                Créer l'utilisateur
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Edit User -->
    @if (showEditModal && selectedUser != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-user-edit me-2"></i>
                        <h3>Modifier l'utilisateur</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="modal-body">
                    <div class="user-preview">
                        <div class="preview-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="preview-info">
                            <h4>@selectedUser.FirstName @selectedUser.LastName</h4>
                            <p>@selectedUser.Email</p>
                        </div>
                    </div>
                    
                    <EditForm Model="@editUser" OnValidSubmit="UpdateUser">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="edit-username" class="form-label">
                                    <i class="fas fa-user"></i> Nom d'utilisateur
                                </label>
                                <InputText id="edit-username" class="form-input" @bind-Value="editUser.Username" />
                            </div>
                            
                            <div class="form-group">
                                <label for="edit-email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <InputText id="edit-email" type="email" class="form-input" @bind-Value="editUser.Email" />
                            </div>
                            
                            <div class="form-group">
                                <label for="edit-firstname" class="form-label">
                                    <i class="fas fa-user"></i> Prénom
                                </label>
                                <InputText id="edit-firstname" class="form-input" @bind-Value="editUser.FirstName" />
                            </div>
                            
                            <div class="form-group">
                                <label for="edit-lastname" class="form-label">
                                    <i class="fas fa-user"></i> Nom
                                </label>
                                <InputText id="edit-lastname" class="form-input" @bind-Value="editUser.LastName" />
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="edit-phone" class="form-label">
                                    <i class="fas fa-phone"></i> Téléphone
                                </label>
                                <InputText id="edit-phone" class="form-input" @bind-Value="editUser.PhoneNumber" />
                            </div>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Manage Roles -->
    @if (showRoleModal && selectedUser != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-user-tag me-2"></i>
                        <h3>Gérer les rôles</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="modal-body">
                    <div class="user-preview">
                        <div class="preview-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="preview-info">
                            <h4>@selectedUser.FirstName @selectedUser.LastName</h4>
                            <p>@selectedUser.Email</p>
                        </div>
                    </div>
                    
                    <div class="current-roles">
                        <h5>Rôles actuels :</h5>
                        <div class="roles-list">
                            @if (selectedUser.Roles != null && selectedUser.Roles.Any())
                            {
                                @foreach (var role in selectedUser.Roles)
                                {
                                    <div class="role-item">
                                        <span class="role-badge @GetRoleClass(role)">
                                            @GetRoleIcon(role) @role
                                        </span>
                                        @if (role != "Client")
                                        {
                                            <button class="role-remove" 
                                                  
                                                    disabled="@isUpdatingRole">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-roles">
                                    <i class="fas fa-info-circle"></i>
                                    Aucun rôle attribué
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="add-role-section">
                        <h5>Ajouter un rôle :</h5>
                        <div class="role-selector">
                            <div class="select-wrapper">
                                <i class="fas fa-plus"></i>
                                <select class="form-select" @bind="newRole">
                                    <option value="">Sélectionner un rôle...</option>
                                    <option value="Client">Client</option>
