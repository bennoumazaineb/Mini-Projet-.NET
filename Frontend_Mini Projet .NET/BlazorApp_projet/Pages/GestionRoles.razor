@page "/gestion-roles"
@using Microsoft.AspNetCore.Components
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using BlazorApp1.Services
@inject IRoleService RoleService
@inject NavigationManager Navigation
@inject IAuthService AuthService
@using BlazorApp1.Models

<PageTitle>Gestion des Rôles - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-user-shield icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Gestion des Rôles & Permissions</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                        <span class="sep">/</span>
                        <span class="current">
                            <i class="fas fa-user-shield"></i> Gestion des rôles
                        </span>
                    </nav>
                </div>
                <div class="header-right">
                    <a href="/gestion-utilisateur" class="btn btn-outline" title="Gestion Utilisateurs">
                        <i class="fas fa-users me-2"></i>Utilisateurs
                    </a>
                    <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Rôles</h2>
                        <p>Administrez les rôles et permissions du système SAV</p>

                        <div class="welcome-actions">
                            <button class="btn btn-primary btn-shine" @onclick="ShowCreateModal">
                                <i class="fas fa-plus-circle icon-float me-2"></i>
                                Nouveau Rôle
                            </button>
                            <button class="btn btn-outline" @onclick="TogglePermissionsGuide">
                                <i class="fas fa-info-circle icon-float me-2"></i>
                                Guide des Permissions
                            </button>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick='() => FilterRoles("all")'>
                            <div class="mini-ico">
                                <i class="fas fa-layer-group icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total Rôles</div>
                                <div class="mini-value">@totalRoles</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterRoles("system")'>
                            <div class="mini-ico">
                                <i class="fas fa-shield-alt icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Système</div>
                                <div class="mini-value">@systemRoles</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterRoles("custom")'>
                            <div class="mini-ico">
                                <i class="fas fa-user-cog icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Personnalisés</div>
                                <div class="mini-value">@customRoles</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="welcome-stats">
                    <div class="stat-card">
                        <div class="stat-ico">
                            <i class="fas fa-users icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@totalUsers</h3>
                            <p>Utilisateurs affectés</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico success">
                            <i class="fas fa-check-circle icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@activeRoles</h3>
                            <p>Rôles actifs</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico info">
                            <i class="fas fa-tasks icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@totalPermissions</h3>
                            <p>Permissions totales</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico warn">
                            <i class="fas fa-sync-alt icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>Dernière MAJ</h3>
                            <p>@lastUpdate</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Permissions Guide Panel -->
            @if (showPermissionsGuide)
            {
                <section class="panel search-section">
                    <div class="panel-head">
                        <h2 class="section-title">Guide des Permissions</h2>
                        <button class="link" @onclick="TogglePermissionsGuide">
                            <i class="fas fa-times"></i> Fermer
                        </button>
                    </div>

                    <div class="permissions-grid">
                        <div class="permission-category">
                            <h4><i class="fas fa-user-tie"></i> Rôles Système</h4>
                            <div class="permission-list">
                                <div class="permission-item">
                                    <span class="permission-badge admin">Admin</span>
                                    <p>Accès complet à toutes les fonctionnalités du système</p>
                                </div>
                                <div class="permission-item">
                                    <span class="permission-badge responsable">ResponsableSAV</span>
                                    <p>Gestion des réclamations, interventions et articles</p>
                                </div>
                                <div class="permission-item">
                                    <span class="permission-badge client">Client</span>
                                    <p>Consultation des réclamations et création de tickets</p>
                                </div>
                            </div>
                        </div>

                        <div class="permission-category">
                            <h4><i class="fas fa-cogs"></i> Permissions API</h4>
                            <div class="permission-list">
                                <div class="permission-item">
                                    <span class="permission-badge">GET</span>
                                    <p>Lecture des données</p>
                                </div>
                                <div class="permission-item">
                                    <span class="permission-badge">POST</span>
                                    <p>Création de données</p>
                                </div>
                                <div class="permission-item">
                                    <span class="permission-badge">PUT/DELETE</span>
                                    <p>Modification/Suppression</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }

            <!-- Main Roles Panel -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">Liste des Rôles</h2>
                    <div class="table-actions">
                        <div class="quick-search">
                            <i class="fas fa-search"></i>
                            <input type="text"
                                   placeholder="Rechercher un rôle..."
                                   @bind="searchQuery"
                                   @bind:event="oninput" />
                        </div>
                        <button class="btn-icon" title="Actualiser" @onclick="LoadRoles">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                        <button class="btn-icon" title="Exporter" @onclick="ExportRoles">
                            <i class="fas fa-download"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des rôles...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadRoles">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredRoles.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucun rôle trouvé</h4>
                            <p>Commencez par créer votre premier rôle personnalisé</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-plus-circle me-2"></i>
                            Créer un rôle
                        </button>
                    </div>
                }
                else
                {
                    <!-- Roles Table -->
                    <div class="table-responsive slide-up">
                        <table class="roles-table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="table-header">
                                            <span>Rôle</span>
                                        </div>
                                    </th>
                                    <th>ID</th>
                                    <th>Type</th>
                                    <th>Permissions</th>
                                    <th>Utilisateurs</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in filteredRoles.Select((role, index) => new { Role = role, Index = index }))
                                {
                                    <tr class="role-row fade-in" style="--row-index: @role.Index;">
                                        <td>
                                            <div class="role-cell">
                                                <div class="role-avatar">
                                                    @GetRoleIcon(role.Role.Name)
                                                </div>
                                                <div class="role-info">
                                                    <strong>@role.Role.Name</strong>
                                                    <small class="role-desc">@GetRoleDescription(role.Role.Name)</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <code class="role-id">@role.Role.Id.Substring(0, Math.Min(8, role.Role.Id.Length))...</code>
                                        </td>
                                        <td>
                                            <span class="role-type @GetRoleTypeClass(role.Role.Name)">
                                                @GetRoleType(role.Role.Name)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="permissions-preview">
                                                @foreach (var perm in GetRolePermissions(role.Role.Name))
                                                {
                                                    <span class="perm-tag">@perm</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="user-count">
                                                <i class="fas fa-users me-1"></i>
                                                <span class="count-badge">@GetUserCount(role.Role.Name)</span>
                                                utilisateurs
                                            </div>
                                        </td>
                                        <td>
                                            <div class="actions-cell">
                                                @if (IsCustomRole(role.Role.Name))
                                                {
                                                    
                                                    <button class="btn-action delete"
                                                            title="Supprimer"
                                                            @onclick="() => ConfirmDelete(role.Role)">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="system-badge">Système</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@filteredRoles.Count</strong> rôles
                            <span class="filter-indicator">
                                @if (!string.IsNullOrEmpty(currentFilter))
                                {
                                    <span>
                                        <i class="fas fa-filter ms-2"></i>
                                        Filtre: @currentFilter
                                    </span>
                                }

                            </span>
                        </span>
                        <div class="summary-actions">
                            <button class="btn btn-sm btn-outline" @onclick='() => FilterRoles("all")'>
                                Tout voir
                            </button>

                        </div>
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-user-shield"></i>
                    Gestion des Rôles © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-database"></i> @totalRoles rôles
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create Role -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        <h3>Créer un nouveau rôle</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <!-- MODAL: Confirm Delete - Section améliorée -->
                <div class="modal-body">
                    <!-- Animation de suppression -->
                    <div class="delete-animation">
                        <div class="trash-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                    </div>

                    <!-- Message principal avec icônes -->
                    <div class="confirmation-message">
                        <div class="confirmation-title">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Confirmation de suppression
                        </div>
                        <div class="confirmation-subtitle">
                            <i class="fas fa-info-circle me-2"></i>
                            Cette action est définitive et ne peut pas être annulée.
                        </div>
                    </div>

                    <!-- Carte d'information du rôle -->
                    <div class="role-info-card">
                        <div class="info-card-header">
                            <div class="role-avatar-small">
                                @GetRoleIcon(selectedRole.Name)
                            </div>
                            <div class="role-title">
                                <h4>@selectedRole.Name</h4>
                                <span class="role-type-badge @GetRoleTypeClass(selectedRole.Name)">
                                    @GetRoleType(selectedRole.Name)
                                </span>
                            </div>
                        </div>

                        <div class="info-card-body">
                            <div class="info-item">
                                <i class="fas fa-users"></i>
                                <span>@GetUserCount(selectedRole.Name) utilisateur(s)</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-key"></i>
                                <span>@GetRolePermissions(selectedRole.Name).Count permission(s)</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-calendar"></i>
                                <span>Créé le @DateTime.Now.AddDays(-new Random().Next(1, 365)).ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Conséquences de la suppression -->
                    <div class="consequences-warning">
                        <h5><i class="fas fa-exclamation-circle me-2"></i>Conséquences :</h5>
                        <ul class="consequences-list">
                            <li><i class="fas fa-user-slash"></i> Les utilisateurs perdront ce rôle</li>
                            <li><i class="fas fa-shield-alt"></i> Les permissions seront révoquées</li>
                            <li><i class="fas fa-history"></i> L'historique des actions sera conservé</li>
                            <li><i class="fas fa-ban"></i> Cette action est irréversible</li>
                        </ul>
                    </div>

                    <!-- Zone de saisie de confirmation -->
                    <div class="form-group full-width mt-3">
                        <label class="form-label">
                            <i class="fas fa-keyboard"></i> Tapez "<strong>SUPPRIMER</strong>" pour confirmer
                        </label>
                        <input type="text"
                               class="form-input @(deleteConfirmationText == "SUPPRIMER" ? "confirmation-success" : "")"
                               placeholder="SUPPRIMER"
                               @bind="deleteConfirmationText"
                               @oninput="OnDeleteConfirmationChanged" />
                        <small class="form-hint">Cette mesure de sécurité empêche les suppressions accidentelles.</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Edit Role -->
    @if (showEditModal && selectedRole != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-edit me-2"></i>
                        <h3>Modifier le rôle</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="role-preview">
                        <div class="preview-avatar">
                            @GetRoleIcon(selectedRole.Name)
                        </div>
                        <div class="preview-info">
                            <h4>@selectedRole.Name</h4>
                            <p>ID: @selectedRole.Id.Substring(0, Math.Min(8, selectedRole.Id.Length))...</p>
                        </div>
                    </div>

                    <EditForm Model="@editRole" OnValidSubmit="UpdateRole">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="editRoleName" class="form-label">
                                    <i class="fas fa-tag"></i> Nom du rôle *
                                </label>
                                <InputText id="editRoleName" class="form-input" @bind-Value="editRole.Name" />
                                <ValidationMessage For="@(() => editRole.Name)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label class="form-label">
                                    <i class="fas fa-users"></i> Utilisateurs avec ce rôle
                                </label>
                                <div class="users-list">
                                    @if (roleUsers.Any())
                                    {
                                        @foreach (var user in roleUsers)
                                        {
                                            <span class="user-tag">
                                                <i class="fas fa-user"></i> @user
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <div class="no-users">
                                            <i class="fas fa-info-circle"></i>
                                            Aucun utilisateur avec ce rôle
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Confirm Delete -->
    @if (showDeleteConfirm && selectedRole != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header danger">
                    <div class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <h3>Confirmer la suppression</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <!-- Animation de suppression -->
                    <div class="delete-animation">
                        <div class="trash-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                    </div>

                    <!-- Message principal -->
                    <div class="confirmation-message">
                        <div class="confirmation-title">Vous êtes sur le point de supprimer ce rôle</div>
                        <div class="confirmation-subtitle">
                            Cette action est irréversible et affectera tous les utilisateurs ayant ce rôle.
                        </div>
                    </div>

                    <!-- Liste des impacts -->
                    <div class="impact-list">
                        <div class="impact-item warning">
                            <div class="impact-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="impact-text">
                                <div class="impact-label">Utilisateurs affectés</div>
                                <div class="impact-detail">
                                    @GetUserCount(selectedRole.Name) utilisateur(s) perdront ce rôle
                                </div>
                            </div>
                        </div>

                        <div class="impact-item info">
                            <div class="impact-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div class="impact-text">
                                <div class="impact-label">Permissions révoquées</div>
                                <div class="impact-detail">
                                    Toutes les permissions associées à ce rôle seront supprimées
                                </div>
                            </div>
                        </div>

                        <div class="impact-item warning">
                            <div class="impact-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="impact-text">
                                <div class="impact-label">Historique préservé</div>
                                <div class="impact-detail">
                                    Les actions passées des utilisateurs resteront dans l'historique
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Détails du rôle -->
                    <div class="role-details-preview">
                        <div class="detail-item">
                            <span class="detail-label">Nom du rôle :</span>
                            <span class="detail-value"><span class="badge bg-danger">@selectedRole.Name</span></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Type :</span>
                            <span class="detail-value">@GetRoleType(selectedRole.Name)</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Créé le :</span>
                            <span class="detail-value">@DateTime.Now.AddDays(-new Random().Next(1, 365)).ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    <!-- Zone de saisie de confirmation -->
                    <div class="form-group full-width mt-3">
                        <label class="form-label">
                            <i class="fas fa-keyboard"></i> Tapez "SUPPRIMER" pour confirmer
                        </label>
                        <input type="text"
                               class="form-input"
                               placeholder="SUPPRIMER"
                               @bind="deleteConfirmationText"
                               @oninput="OnDeleteConfirmationChanged" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    <button type="button"
                            class="btn btn-danger"
                            @onclick="DeleteRole"
                            disabled="@(isDeleting || deleteConfirmationText != "SUPPRIMER")"
                            title="@(deleteConfirmationText != "SUPPRIMER" ? "Tapez 'SUPPRIMER' pour activer" : "")">
                        @if (isDeleting)
                        {
                            <span class="spinner-small me-2"></span>
                        }
                        <i class="fas fa-trash-alt me-2"></i>
                        Supprimer définitivement
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Notifications Container -->
    <div class="notifications-container">
        @foreach (var notification in notifications)
        {
            <div class="notification @notification.Type.ToString().ToLower() @(!notification.IsVisible ? "slide-out" : "")"
                 data-id="@notification.Id">
                <div class="notification-icon">
                    @if (notification.Type == NotificationType.Success)
                    {
                        <i class="fas fa-check-circle"></i>
                    }
                    else if (notification.Type == NotificationType.Error)
                    {
                        <i class="fas fa-exclamation-circle"></i>
                    }
                    else if (notification.Type == NotificationType.Warning)
                    {
                        <i class="fas fa-exclamation-triangle"></i>
                    }
                    else
                    {
