        {
            ShowNotification("Opération interdite",
                "⛔ Impossible de supprimer un rôle système",
                NotificationType.Error);
            return;
        }

        try
        {
            isDeleting = true;
            StateHasChanged();

            // Sauvegarder le nom pour vérification après suppression
            string roleNameToDelete = selectedRole.Name;
            bool roleExistedBefore = roles.Any(r => r.Name == roleNameToDelete);

            Console.WriteLine($"🔍 DEBUG: Tentative de suppression du rôle: {roleNameToDelete}");
            Console.WriteLine($"🔍 DEBUG: Rôle existait avant suppression: {roleExistedBefore}");

            // 1. Tenter de supprimer le rôle
            var result = await RoleService.DeleteRoleAsync(roleNameToDelete);
            Console.WriteLine($"🔍 DEBUG: Résultat du service Delete: {result}");

            // Gestion flexible des retours de suppression
            bool deletionSuccessful = false;
            string feedbackMessage = result;

            // Vérifier différents formats de retour
            if (result == "OK" ||
                result == "Deleted" ||
                result == "Success" ||
                result == "200" ||
                result.Contains("supprimé", StringComparison.OrdinalIgnoreCase) ||
                result.Contains("deleted", StringComparison.OrdinalIgnoreCase) ||
                result.Contains("success", StringComparison.OrdinalIgnoreCase))
            {
                deletionSuccessful = true;
            }
            else if (result.Contains("n'existe pas", StringComparison.OrdinalIgnoreCase) ||
                     result.Contains("not found", StringComparison.OrdinalIgnoreCase) ||
                     result.Contains("inexistant", StringComparison.OrdinalIgnoreCase))
            {
                ShowNotification("Rôle non trouvé",
                    $"ℹ️ Le rôle '{roleNameToDelete}' n'existe pas ou a déjà été supprimé",
                    NotificationType.Info);

                // Rafraîchir quand même la liste
                await Task.Delay(800);
                await LoadRoles();
                CloseModal();
                return;
            }
            else if (result.Contains("utilisateur", StringComparison.OrdinalIgnoreCase) ||
                     result.Contains("user", StringComparison.OrdinalIgnoreCase) ||
                     result.Contains("assigned", StringComparison.OrdinalIgnoreCase))
            {
                ShowNotification("Rôle utilisé",
                    $"⚠️ Impossible de supprimer le rôle '{roleNameToDelete}'\n" +
                    $"👥 Des utilisateurs sont encore assignés à ce rôle",
                    NotificationType.Warning);
                return;
            }

            // 2. Attendre un peu pour laisser le temps à l'API
            await Task.Delay(800);

            // 3. Rafraîchir la liste pour voir l'état actuel
            await LoadRoles();

            // 4. Vérifier si le rôle a vraiment disparu de la liste
            bool roleStillExists = roles.Any(r => r.Name == roleNameToDelete);
            Console.WriteLine($"🔍 DEBUG: Rôle existe après suppression: {roleStillExists}");

            if (!roleStillExists)
            {
                // SUCCÈS : Le rôle a disparu de la liste
                ShowNotification("Suppression réussie",
                    $"🗑️ Rôle '{roleNameToDelete}' supprimé avec succès!\n" +
                    $"📝 Les permissions ont été révoquées\n" +
                    $"🔄 La liste a été mise à jour\n" +
                    $"✅ Opération terminée",
                    NotificationType.Success);

                CloseModal();
            }
            else if (deletionSuccessful)
            {
                // Cas étrange : l'API dit OK mais le rôle est toujours là
                Console.WriteLine($"⚠️ WARN: API retourne succès mais rôle toujours présent");
                ShowNotification("Incohérence détectée",
                    $"⚠️ L'API signale la suppression mais le rôle est toujours visible\n" +
                    $"🔍 Réessayez ou actualisez la page manuellement",
                    NotificationType.Warning);
            }
            else
            {
                // ÉCHEC : L'API n'a pas réussi à supprimer
                ShowNotification("Échec de la suppression",
                    $"❌ Impossible de supprimer le rôle '{roleNameToDelete}'\n" +
                    $"📋 Message: {feedbackMessage}\n" +
                    $"🔧 Contactez l'administrateur si le problème persiste",
                    NotificationType.Error);
            }
        }
        catch (Exception ex)
        {
            // Gestion spécifique des erreurs
            Console.WriteLine($"🔍 DEBUG: Exception dans DeleteRole: {ex.Message}");
            Console.WriteLine($"🔍 DEBUG: StackTrace: {ex.StackTrace}");

            if (ex.Message.Contains("timeout", StringComparison.OrdinalIgnoreCase))
            {
                ShowNotification("Timeout",
                    $"⏱️ La suppression a pris trop de temps\n" +
                    $"🔄 Vérifiez si le rôle a été supprimé\n" +
                    $"🔄 Actualisez manuellement la liste",
                    NotificationType.Warning);
            }
            else if (ex.Message.Contains("network", StringComparison.OrdinalIgnoreCase) ||
                     ex.Message.Contains("connexion", StringComparison.OrdinalIgnoreCase))
            {
                ShowNotification("Problème réseau",
                    $"🌐 Erreur de connexion lors de la suppression\n" +
                    $"🔌 Vérifiez votre connexion Internet\n" +
                    $"🔄 Réessayez plus tard",
                    NotificationType.Error);
            }
            else if (ex.Message.Contains("authorization", StringComparison.OrdinalIgnoreCase) ||
                     ex.Message.Contains("unauthorized", StringComparison.OrdinalIgnoreCase))
            {
                ShowNotification("Non autorisé",
                    $"🔒 Vous n'avez pas les permissions pour supprimer ce rôle\n" +
                    $"👤 Contactez un administrateur",
                    NotificationType.Error);
            }
            else
            {
                ShowNotification("Erreur critique",
                    $"❌ Échec de la suppression : {ex.Message}\n" +
                    $"🔧 Veuillez contacter l'administrateur système",
                    NotificationType.Error);
            }

            // Même en cas d'erreur, rafraîchir pour voir l'état actuel
            await Task.Delay(1000);
            await LoadRoles();
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }
    private void ExportRoles()
    {
        try
        {
            var csv = "Nom,Type,Description,Utilisateurs\n";
            foreach (var role in roles)
            {
                csv += $"\"{role.Name}\",\"{GetRoleType(role.Name)}\",\"{GetRoleDescription(role.Name)}\",\"{GetUserCount(role.Name)}\"\n";
            }
            var bytes = System.Text.Encoding.UTF8.GetBytes(csv);
            var base64 = Convert.ToBase64String(bytes);
            Navigation.NavigateTo($"data:text/csv;base64,{base64}", true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de l'export: {ex.Message}";
            ShowNotification("Erreur d'export",
                $"❌ Échec de l'export : {ex.Message}",
                NotificationType.Error);
            StateHasChanged();
        }
    }
