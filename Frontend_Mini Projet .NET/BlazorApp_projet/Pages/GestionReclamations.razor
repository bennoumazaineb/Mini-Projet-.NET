        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            filtered = filtered.Where(r =>
                r.Titre.ToLower().Contains(query) ||
                r.Description.ToLower().Contains(query) ||
                r.ClientNom.ToLower().Contains(query) ||
                r.ArticleReference.ToLower().Contains(query)
            );
        }

        // Status filter
        if (selectedStatus != "all")
        {
            filtered = filtered.Where(r => r.StatutText == selectedStatus);
        }

        // Responsable filter
        if (selectedResponsable != "all")
        {
            if (selectedResponsable == "assigned")
                filtered = filtered.Where(r => !string.IsNullOrEmpty(r.ResponsableSAVId));
            else if (selectedResponsable == "unassigned")
                filtered = filtered.Where(r => string.IsNullOrEmpty(r.ResponsableSAVId));
        }

        // Sorting
        filtered = sortBy switch
        {
            "title" => filtered.OrderBy(r => r.Titre),
            "status" => filtered.OrderBy(r => r.Statut),
            "client" => filtered.OrderBy(r => r.ClientNom),
            _ => filtered.OrderByDescending(r => r.DateCreation)
        };

        filteredReclamations = filtered.ToList();
    }

