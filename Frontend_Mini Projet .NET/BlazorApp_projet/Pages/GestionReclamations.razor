@page "/gestion-reclamations"
@using BlazorApp1.Models
@using BlazorApp1.Services
@using System.ComponentModel.DataAnnotations
@inject IReclamationService ReclamationService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Gestion des Réclamations - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-clipboard-check icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Centre de Réclamations</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                        <span class="sep">/</span>
                        <span class="current">
                            <i class="fas fa-clipboard-list"></i> Gestion des réclamations
                        </span>
                    </nav>
                </div>
                <div class="header-right">
                    @if (userRoles?.Contains("responsablesav") == true || userRoles?.Contains("admin") == true)
                    {
                        <button class="btn btn-outline" @onclick="ToggleStats">
                            <i class="fas fa-chart-bar icon-float me-2"></i>
                            Voir les Statistiques
                        </button>
                    }
                    <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Centre de Réclamations</h2>
                        <p>Gérez et suivez toutes les réclamations clients</p>

                        <div class="welcome-actions">
                            <button class="btn btn-primary btn-shine" @onclick="ShowCreateModal">
                                <i class="fas fa-plus-circle icon-float me-2"></i>
                                Nouvelle Réclamation
                            </button>
                            @if (userRoles?.Contains("client") == true)
                            {
                                <button class="btn btn-outline" @onclick="ShowMesReclamations">
                                    <i class="fas fa-user-circle icon-float me-2"></i>
                                    Mes Réclamations
                                </button>
                            }
                            @if (userRoles?.Contains("responsablesav") == true || userRoles?.Contains("admin") == true)
                            {
                                <button class="btn btn-outline" @onclick="ExportReclamations">
                                    <i class="fas fa-file-export icon-float me-2"></i>
                                    Exporter
                                </button>
                            }
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick='() => FilterByStatus("all")'>
                            <div class="mini-ico">
                                <i class="fas fa-clipboard-list icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total</div>
                                <div class="mini-value">@stats.TotalReclamations</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByStatus("NonTraitee")'>
                            <div class="mini-ico">
                                <i class="fas fa-clock icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Non Traitées</div>
                                <div class="mini-value">@stats.NonTraitees</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByStatus("EnCours")'>
                            <div class="mini-ico">
                                <i class="fas fa-spinner icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">En Cours</div>
                                <div class="mini-value">@stats.EnCours</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByStatus("Traitee")'>
                            <div class="mini-ico">
                                <i class="fas fa-check-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Traitées</div>
                                <div class="mini-value">@stats.Traitees</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (showStats)
                {
                    <div class="welcome-stats">
                        <div class="stat-card">
                            <div class="stat-ico">
                                <i class="fas fa-user-tie icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.AvecResponsable</h3>
                                <p>Avec responsable</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico success">
                                <i class="fas fa-shield-alt icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.SousGarantie</h3>
                                <p>Sous garantie</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico info">
                                <i class="fas fa-calendar-alt icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.MoyenneJours.ToString("F1")</h3>
                                <p>Jours moyen</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico warn">
                                <i class="fas fa-money-bill-wave icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.TotalMontantFacture.ToString("C2")</h3>
                                <p>Valeur totale</p>
                            </div>
                        </div>
                    </div>
                }
            </section>

            <!-- Search & Filters -->
            <section class="panel search-section">
                <div class="search-form">
                    <div class="search-grid">
                        <div class="form-group">
                            <label><i class="fas fa-search"></i> Recherche</label>
                            <div class="quick-search">
                                <i class="fas fa-search"></i>
                                <input type="text"
                                       placeholder="Titre, référence, client..."
                                       @bind="searchQuery"
                                       @bind:event="oninput" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-filter"></i> Statut</label>
                            <select class="form-select" @bind="selectedStatus">
                                <option value="all">Tous les statuts</option>
                                <option value="NonTraitee">Non Traitées</option>
                                <option value="EnCours">En Cours</option>
                                <option value="Traitee">Traitées</option>
                                <option value="Annulee">Annulées</option>
                            </select>
                        </div>

                        @if (userRoles?.Contains("responsablesav") == true || userRoles?.Contains("admin") == true)
                        {
                            <div class="form-group">
                                <label><i class="fas fa-user-tie"></i> Responsable</label>
                                <select class="form-select" @bind="selectedResponsable">
                                    <option value="all">Tous les responsables</option>
                                    <option value="assigned">Avec responsable</option>
                                    <option value="unassigned">Sans responsable</option>
                                </select>
                            </div>
                        }

                        <div class="form-group">
                            <label><i class="fas fa-sort"></i> Trier par</label>
                            <select class="form-select" @bind="sortBy">
                                <option value="date">Date création</option>
                                <option value="title">Titre</option>
                                <option value="status">Statut</option>
                                <option value="client">Client</option>
                            </select>
                        </div>
                    </div>

                    <div class="search-actions">
                        <button class="btn btn-secondary" @onclick="ResetFilters">
                            <i class="fas fa-redo me-2"></i>Réinitialiser
                        </button>
                        <button class="btn btn-primary" @onclick="LoadReclamations">
                            <i class="fas fa-sync-alt me-2"></i>Actualiser
                        </button>
                    </div>
                </div>
            </section>

            <!-- Quick Stats -->
            @if (showQuickStats)
            {
                <div class="quick-stats-wrapper mb-4">
                    <!-- Ajout de mb-4 pour marge basse -->
                    <div class="panel quick-stats">
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-label">Réclamations aujourd'hui</div>
                                <div class="stat-value">@stats.Aujourdhui</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Cette semaine</div>
                                <div class="stat-value">@stats.CetteSemaine</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Sous garantie</div>
                                <div class="stat-value">@stats.SousGarantie</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Hors garantie</div>
                                <div class="stat-value">@stats.HorsGarantie</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- Réclamations Grid -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">
                        @if (userRoles?.Contains("client") == true && viewClientReclamations)
                        {
                            <span>Mes Réclamations</span>
                        }
                        else
                        {
                            <span>Liste des Réclamations</span>
                        }
                    </h2>
                    <div class="table-actions">
                        <div class="view-toggle">
                            <button class="btn-icon @(viewMode == "grid" ? "active" : "")"
                                    @onclick='() => SetViewMode("grid")'
                                    title="Vue Grille">
                                <i class="fas fa-th-large"></i>
                            </button>
                            <button class="btn-icon @(viewMode == "list" ? "active" : "")"
                                    @onclick='() => SetViewMode("list")'
                                    title="Vue Liste">
                                <i class="fas fa-list"></i>
                            </button>
                            <button class="btn-icon" @onclick="ToggleQuickStats" title="Statistiques">
                                <i class="fas fa-chart-bar"></i>
                            </button>
                        </div>
                        @if (!viewClientReclamations)
                        {
                            <button class="btn-icon" title="Exporter" @onclick="ExportReclamations">
                                <i class="fas fa-download"></i>
                            </button>
                        }
                        <button class="btn-icon" title="Actualiser" @onclick="LoadReclamations">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des réclamations...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadReclamations">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredReclamations.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-clipboard"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucune réclamation trouvée</h4>
                            <p>Commencez par créer votre première réclamation</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-plus-circle me-2"></i>
                            Créer une réclamation
                        </button>
                    </div>
                }
                else
                {
                    @if (viewMode == "grid")
                    {
                        <!-- Vue Grille (Cartes) -->
                        <div class="reclamations-grid slide-up">
                            @foreach (var reclamation in filteredReclamations)
                            {
                                var index = filteredReclamations.IndexOf(reclamation);
                                <div class="reclamation-card fade-in">
                                    <div class="reclamation-card-header">
                                        <div class="reclamation-status @GetStatusClass(reclamation.Statut)">
                                            <i class="fas fa-circle"></i>
                                            @reclamation.StatutText
                                        </div>
                                        <div class="reclamation-actions">
                                            <button class="btn-action view" @onclick="() => ShowDetailModal(reclamation)" title="Détails">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            @if (CanEditReclamation(reclamation))
                                            {
                                                <button class="btn-action edit" @onclick="() => ShowEditModal(reclamation)" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                            @if (CanDeleteReclamation(reclamation))
                                            {
                                                <button class="btn-action delete" @onclick="() => ConfirmDelete(reclamation)" title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>

                                    <div class="reclamation-card-body">
                                        <div class="reclamation-image">
                                            <i class="fas fa-clipboard-check"></i>
                                        </div>

                                        <div class="reclamation-info">
                                            <h3 class="reclamation-title">@reclamation.Titre</h3>
                                            <h4 class="reclamation-client">@reclamation.ClientNom</h4>

                                            <p class="reclamation-description">@TruncateText(reclamation.Description, 100)</p>

                                            <div class="reclamation-article">
                                                <i class="fas fa-box"></i>
                                                <span>Article: @reclamation.ArticleReference</span>
                                            </div>

                                            <div class="reclamation-dates">
                                                <div class="date-item">
                                                    <i class="fas fa-calendar-plus"></i>
                                                    <span>Créée: @reclamation.DateCreation.ToString("dd/MM/yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="reclamation-card-footer">
                                        <div class="info-section">
                                            <div class="info-row">
                                                <span>Client:</span>
                                                <strong>@reclamation.ClientNom</strong>
                                            </div>
                                            <div class="info-row">
                                                <span>Email:</span>
                                                <strong class="text-info">@reclamation.ClientEmail</strong>
                                            </div>
                                        </div>

                                        <div class="actions-section">
                                            <div class="warranty-badge @(reclamation.SousGarantie ? "active" : "none")">
                                                <i class="fas fa-shield-alt"></i>
                                                <span>@(reclamation.SousGarantie ? "Sous garantie" : "Hors garantie")</span>
                                            </div>
                                            <div class="action-buttons">
                                                @if (CanAssignResponsable(reclamation))
                                                {
                                                    <button class="btn-action assign" @onclick="() => ShowAssignModal(reclamation)" title="Assigner">
                                                        <i class="fas fa-user-plus"></i>
                                                    </button>
                                                }
                                                @if (CanUpdateStatus(reclamation))
                                                {
                                                    <button class="btn-action status" @onclick="() => ShowStatusModal(reclamation)" title="Changer statut">
                                                        <i class="fas fa-exchange-alt"></i>
                                                    </button>
                                                }
                                                @if (CanAssignResponsable(reclamation))
                                                {
                                                    <button class="btn-check-warranty"
                                                            @onclick="() => ShowWarrantyModal(reclamation)"
                                                            title="Vérifier garantie">
                                                        <i class="fas fa-shield-alt"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Vue Liste -->
                        <div class="table-responsive slide-up">
                            <table class="reclamations-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Titre</th>
                                        <th>Client</th>
                                        <th>Article</th>
                                        <th>Statut</th>
                                        <th>Garantie</th>
                                        <th>Date</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reclamation in filteredReclamations)
                                    {
                                        <tr class="reclamation-row">
                                            <td>
                                                <div class="reclamation-cell">
                                                    <strong>#@reclamation.Id</strong>
                                                </div>
                                            </td>
                                            <td>@reclamation.Titre</td>
                                            <td>
                                                <div class="client-info">
                                                    <strong>@reclamation.ClientNom</strong>
                                                    <small>@reclamation.ClientEmail</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="article-badge">
                                                    <i class="fas fa-box"></i>
                                                    @reclamation.ArticleReference
                                                </span>
                                            </td>
                                            <td>
                                                <span class="status-badge @GetStatusClass(reclamation.Statut)">
                                                    @reclamation.StatutText
                                                </span>
                                            </td>
                                            <td>
                                                <div class="garantie-indicator @(reclamation.SousGarantie ? "has-garantie" : "no-garantie")">
                                                    <i class="fas fa-shield-alt"></i>
                                                    <span>@(reclamation.SousGarantie ? "Oui" : "Non")</span>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <div class="date-cell">
                                                    @reclamation.DateCreation.ToString("dd/MM/yyyy")
                                                </div>
                                            </td>
                                            <td>
                                                <div class="actions-cell">
                                                    <button class="btn-action view"
                                                            @onclick="() => ShowDetailModal(reclamation)"
                                                            title="Détails">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (CanEditReclamation(reclamation))
                                                    {
                                                        <button class="btn-action edit"
                                                                @onclick="() => ShowEditModal(reclamation)"
                                                                title="Modifier">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                    }
                                                    @if (CanAssignResponsable(reclamation))
                                                    {
                                                        <button class="btn-action assign"
                                                                @onclick="() => ShowAssignModal(reclamation)"
                                                                title="Assigner">
                                                            <i class="fas fa-user-plus"></i>
                                                        </button>
                                                    }
                                                    @if (CanDeleteReclamation(reclamation))
                                                    {
                                                        <button class="btn-action delete"
                                                                @onclick="() => ConfirmDelete(reclamation)"
                                                                title="Supprimer">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@filteredReclamations.Count</strong> réclamations
                            <span class="filter-indicator">
                                @if (selectedStatus != "all")
                                {
                                    <span>
                                        <i class="fas fa-filter ms-2"></i>
                                        Statut: @selectedStatus
                                    </span>
                                }
                                @if (viewClientReclamations)
                                {
                                    <span>
                                        <i class="fas fa-user ms-2"></i>
                                        Mes réclamations
                                    </span>
                                }
                            </span>
                        </span>
                        <div class="summary-actions">
                            @if (viewClientReclamations)
                            {
                                <button class="btn btn-sm btn-outline" @onclick="ShowAllReclamations">
                                    <i class="fas fa-list me-1"></i>
                                    Voir toutes
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline" @onclick="ResetFilters">
                                    Tout voir
                                </button>
                            }
                        </div>
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-clipboard-check"></i>
                    Gestion des Réclamations © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-database"></i> @stats.TotalReclamations réclamations
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-user"></i> @currentUser?.Username
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create Reclamation -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        <h3>Nouvelle Réclamation</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@newReclamation" OnValidSubmit="CreateReclamation">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="titre" class="form-label">
                                    <i class="fas fa-heading"></i> Titre *
                                </label>
                                <InputText id="titre" class="form-input" @bind-Value="newReclamation.Titre" />
                                <ValidationMessage For="@(() => newReclamation.Titre)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="description" class="form-label">
                                    <i class="fas fa-align-left"></i> Description *
                                </label>
                                <InputTextArea id="description" class="form-input" @bind-Value="newReclamation.Description" rows="4" />
                                <ValidationMessage For="@(() => newReclamation.Description)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="articleReference" class="form-label">
                                    <i class="fas fa-barcode"></i> Référence Article *
                                </label>
                                <InputText id="articleReference" class="form-input" @bind-Value="newReclamation.ArticleReference" />
                                <ValidationMessage For="@(() => newReclamation.ArticleReference)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="dateAchat" class="form-label">
                                    <i class="fas fa-calendar-day"></i> Date d'achat *
                                </label>
                                <InputDate id="dateAchat" class="form-input" @bind-Value="newReclamation.DateAchat" />
                                <ValidationMessage For="@(() => newReclamation.DateAchat)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="prixAchat" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> Prix d'achat *
                                </label>
                                <InputNumber id="prixAchat" class="form-input" @bind-Value="newReclamation.PrixAchat" />
                                <ValidationMessage For="@(() => newReclamation.PrixAchat)" class="form-error" />
                            </div>
                        </div>

                        <div class="form-hint">
                            <i class="fas fa-info-circle"></i> Les informations client seront automatiquement récupérées de votre compte.
                        </div>

                        <div class="modal-footer">
