@page "/gestion-categories"
@using BlazorApp1.Models
@using BlazorApp1.Services
@using System.ComponentModel.DataAnnotations
@inject ICategoryService CategoryService
@inject IArticleService ArticleService
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>Gestion des Catégories - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-tags icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Gestion des Catégories</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                        <span class="sep">/</span>
                        <span class="current">
                            <i class="fas fa-tags"></i> Gestion des catégories
                        </span>
                    </nav>
                </div>
                <div class="header-right">
                    <a href="/gestion-articles" class="btn btn-outline" title="Gestion Articles">
                        <i class="fas fa-boxes me-2"></i>Articles
                    </a>
                    <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Catégories</h2>
                        <p>Organisez vos articles par catégories pour une meilleure gestion</p>

                        <div class="welcome-actions">
                            <button class="btn btn-primary btn-shine" @onclick="ShowCreateModal">
                                <i class="fas fa-plus-circle icon-float me-2"></i>
                                Nouvelle Catégorie
                            </button>
                            <button class="btn btn-outline" @onclick="() => showSearchFilters = !showSearchFilters">
                                <i class="fas fa-search icon-float me-2"></i>
                                Recherche Avancée
                            </button>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick="() => LoadCategories()">
                            <div class="mini-ico">
                                <i class="fas fa-tags icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total Catégories</div>
                                <div class="mini-value">@totalCategories</div>
                            </div>
                        </div>

                        <div class="mini-card">
                            <div class="mini-ico">
                                <i class="fas fa-box icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Articles Total</div>
                                <div class="mini-value">@totalArticles</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByArticles("high")'>
                            <div class="mini-ico">
                                <i class="fas fa-chart-bar icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Plus peuplée</div>
                                <div class="mini-value">@(categoriesWithMostArticles?.ArticleCount ?? 0)</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="welcome-stats">
                    <div class="stat-card">
                        <div class="stat-ico">
                            <i class="fas fa-tag icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@categoriesWithMostArticles?.Name ?? "-"</h3>
                            <p>Catégorie la plus peuplée</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico success">
                            <i class="fas fa-box-open icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@averageArticlesPerCategory</h3>
                            <p>Moyenne d'articles</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico info">
                            <i class="fas fa-calendar-plus icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@recentCategoryDate</h3>
                            <p>Dernière catégorie</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico warn">
                            <i class="fas fa-clock icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>@lastUpdate</h3>
                            <p>Dernière mise à jour</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Advanced Search Panel -->
            @if (showSearchFilters)
            {
                <section class="panel search-section">
                    <div class="panel-head">
                        <h2 class="section-title">Recherche Avancée</h2>
                        <button class="link" @onclick="() => showSearchFilters = false">
                            <i class="fas fa-times"></i> Fermer
                        </button>
                    </div>

                    <div class="search-form">
                        <div class="search-grid">
                            <div class="form-group">
                                <label for="searchName">Nom de catégorie</label>
                                <input type="text" id="searchName" class="form-input"
                                       @bind="searchName" @bind:event="oninput"
                                       placeholder="Nom de catégorie" />
                            </div>

                            <div class="form-group">
                                <label for="searchDescription">Description</label>
                                <input type="text" id="searchDescription" class="form-input"
                                       @bind="searchDescription" @bind:event="oninput"
                                       placeholder="Description" />
                            </div>

                            <div class="form-group">
                                <label for="searchArticles">Nombre d'articles</label>
                                <select id="searchArticles" class="form-select" @bind="searchArticles">
                                    <option value="">Toutes les tailles</option>
                                    <option value="empty">Vides (0 article)</option>
                                    <option value="small">Petites (1-5 articles)</option>
                                    <option value="medium">Moyennes (6-20 articles)</option>
                                    <option value="large">Grandes (21+ articles)</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="searchDate">Date de création</label>
                                <select id="searchDate" class="form-select" @bind="searchDate">
                                    <option value="">Toutes les dates</option>
                                    <option value="today">Aujourd'hui</option>
                                    <option value="week">Cette semaine</option>
                                    <option value="month">Ce mois</option>
                                </select>
                            </div>
                        </div>

                        <div class="search-actions">
                            <button class="btn btn-primary" @onclick="ApplyFilters">
                                <i class="fas fa-search me-2"></i>Rechercher
                            </button>
                            <button class="btn btn-outline" @onclick="ResetFilters">
                                <i class="fas fa-redo me-2"></i>Réinitialiser
                            </button>
                        </div>
                    </div>
                </section>
            }

            <!-- Main Categories Panel -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">Liste des Catégories</h2>
                    <div class="table-actions">
                        <div class="quick-search">
                            <i class="fas fa-search"></i>
                            <input type="text"
                                   placeholder="Recherche rapide..."
                                   @bind="quickSearch"
                                   @bind:event="oninput" />
                        </div>
                        <button class="btn-icon" title="Actualiser" @onclick="LoadCategories">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                        <button class="btn-icon" title="Exporter" @onclick="ExportCategories">
                            <i class="fas fa-download"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des catégories...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadCategories">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredCategories.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucune catégorie trouvée</h4>
                            <p>Commencez par créer votre première catégorie</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-plus-circle me-2"></i>
                            Créer une catégorie
                        </button>
                    </div>
                }
                else
                {
                    <!-- Categories Table -->
                    <div class="table-responsive slide-up">
                        <table class="users-table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="table-header">
                                            <span>Catégorie</span>
                                        </div>
                                    </th>
                                    <th>Description</th>
                                    <th>Articles</th>
                                    <th>Date de création</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in filteredCategories)
                                {
                                    <tr class="user-row fade-in">
                                        <td>
                                            <div class="user-cell">
                                                <div class="user-avatar-small" style="background: linear-gradient(135deg, #7209b7, #4361ee);">
                                                    <i class="fas fa-tag"></i>
                                                </div>
                                                <div class="user-info">
                                                    <strong>@category.Name</strong>
                                                    <small class="user-id">ID: @category.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="user-fullname">
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <span>@(category.Description.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Aucune description</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="roles-container">
                                                <span class="role-badge @GetSizeClass(category.ArticleCount)">
                                                    <i class="fas fa-box"></i> @category.ArticleCount article(s)
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="date-cell">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                @category.CreatedAt.ToString("dd/MM/yyyy")
                                            </div>
                                        </td>
                                        <td>
                                            <div class="actions-cell">
                                                <button class="btn-action edit"
                                                        title="Modifier"
                                                        @onclick="() => ShowEditModal(category)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn-action view"
                                                        title="Voir les articles"
                                                        @onclick="() => ViewCategoryArticles(category.Id)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn-action delete"
                                                        title="Supprimer"
                                                        @onclick="() => ConfirmDelete(category)"
                                                        disabled="@(category.ArticleCount > 0)">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <div class="pagination slide-up">
                            <button class="pagination-btn @(currentPage <= 1 ? "disabled" : "")"
                                    @onclick="PreviousPage">
                                <i class="fas fa-chevron-left"></i>
                            </button>

                            @if (currentPage > 3)
                            {
                                <button class="pagination-btn" @onclick="() => GoToPage(1)">
                                    1
                                </button>
                                <span class="pagination-ellipsis">...</span>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <button class="pagination-btn @(currentPage == i ? "active" : "")"
                                        @onclick="() => GoToPage(i)">
                                    @i
                                </button>
                            }

                            @if (currentPage < totalPages - 2)
                            {
                                <span class="pagination-ellipsis">...</span>
                                <button class="pagination-btn" @onclick="() => GoToPage(totalPages)">
                                    @totalPages
                                </button>
                            }

                            <button class="pagination-btn @(currentPage >= totalPages ? "disabled" : "")"
                                    @onclick="NextPage">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    }

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, filteredCategories.Count + (currentPage - 1) * pageSize)</strong>
                            sur <strong>@categories.Count</strong> catégories
                        </span>
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-tags"></i>
                    Gestion des Catégories © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-database"></i> @categories.Count catégories
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create Category -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        <h3>Créer une nouvelle catégorie</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@newCategory" OnValidSubmit="CreateCategory">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="categoryName" class="form-label">
                                    <i class="fas fa-tag"></i> Nom de la catégorie *
                                </label>
                                <InputText id="categoryName" class="form-input" @bind-Value="newCategory.Name" />
                                <ValidationMessage For="@(() => newCategory.Name)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="categoryDescription" class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <InputTextArea id="categoryDescription" class="form-input"
                                               @bind-Value="newCategory.Description" rows="4" />
                                <ValidationMessage For="@(() => newCategory.Description)" class="form-error" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                                @if (isCreating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Créer la catégorie
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Edit Category -->
    @if (showEditModal && selectedCategory != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-edit me-2"></i>
                        <h3>Modifier la catégorie</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="user-preview">
                        <div class="preview-avatar" style="background: linear-gradient(135deg, #7209b7, #4361ee);">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="preview-info">
                            <h4>@selectedCategory.Name</h4>
                            <p>ID: @selectedCategory.Id | Articles: @selectedCategory.ArticleCount</p>
                        </div>
                    </div>

                    <EditForm Model="@editCategory" OnValidSubmit="UpdateCategory">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group full-width">
                                <label for="editCategoryName" class="form-label">
                                    <i class="fas fa-tag"></i> Nom de la catégorie *
                                </label>
                                <InputText id="editCategoryName" class="form-input" @bind-Value="editCategory.Name" />
                                <ValidationMessage For="@(() => editCategory.Name)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="editCategoryDescription" class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <InputTextArea id="editCategoryDescription" class="form-input"
                                               @bind-Value="editCategory.Description" rows="4" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Enregistrer
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Confirm Delete -->
    @if (showDeleteConfirm && selectedCategory != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header danger">
                    <div class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <h3>Confirmer la suppression</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="warning-message">
                        <div class="warning-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                        <div class="warning-content">
                            @if (selectedCategory.ArticleCount > 0)
                            {
                                <h4>Impossible de supprimer</h4>
                                <p>
                                    Cette catégorie contient <strong>@selectedCategory.ArticleCount article(s)</strong>.
                                    Vous devez d'abord supprimer ou déplacer ces articles.
                                </p>
                            }
                            else
                            {
                                <h4>Êtes-vous sûr de vouloir supprimer cette catégorie ?</h4>
                                <p>Cette action est irréversible. La catégorie sera supprimée du système.</p>
                            }
                        </div>
                    </div>

                    <div class="user-details-preview">
                        <div class="detail-item">
                            <span class="detail-label">Nom :</span>
                            <span class="detail-value"><strong>@selectedCategory.Name</strong></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">ID :</span>
                            <span class="detail-value">@selectedCategory.Id</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Articles :</span>
                            <span class="detail-value">
                                <span class="@(selectedCategory.ArticleCount > 0 ? "text-danger" : "text-success")">
                                    @selectedCategory.ArticleCount
                                </span>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Créée le :</span>
                            <span class="detail-value">@selectedCategory.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    @if (selectedCategory.ArticleCount == 0)
                    {
                        <div class="form-group full-width mt-3">
                            <label class="form-label">
                                <i class="fas fa-keyboard"></i> Tapez "SUPPRIMER" pour confirmer
                            </label>
                            <input type="text"
                                   class="form-input"
                                   placeholder="SUPPRIMER"
                                   @bind="deleteConfirmationText"
                                   @oninput="OnDeleteConfirmationChanged" />
                        </div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    @if (selectedCategory.ArticleCount == 0)
                    {
                        <button type="button"
                                class="btn btn-danger"
                                @onclick="DeleteCategory"
                                disabled="@(isDeleting || deleteConfirmationText != "SUPPRIMER")">
                            @if (isDeleting)
                            {
                                <span class="spinner-small me-2"></span>
                            }
                            <i class="fas fa-trash-alt me-2"></i>
                            Supprimer définitivement
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>

    :root {
        --primary: #4361ee;
        --primary-dark: #3a56d4;
        --secondary: #7209b7;
        --success: #2ecc71;
        --warning: #f39c12;
        --info: #3498db;
        --danger: #e74c3c;
        --dark: #2d3748;
        --gray: #718096;
        --light: #f7f8fb;
        --card: #ffffff;
        --border: #e2e8f0;
        --shadow: 0 14px 35px rgba(0,0,0,.10);
        --radius: 14px;
        --transition: all .25s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter',-apple-system,BlinkMacSystemFont,sans-serif;
        background: var(--light);
        color: var(--dark);
        line-height: 1.6;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .dash-page {
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .page-enter {
        animation: pageEnter .35s ease both;
    }

    @@keyframes pageEnter {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .bg-blobs {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
        z-index: 0;
    }

    .blob {
        position: absolute;
        border-radius: 999px;
        filter: blur(30px);
        opacity: .35;
        animation: blobFloat 10s ease-in-out infinite;
