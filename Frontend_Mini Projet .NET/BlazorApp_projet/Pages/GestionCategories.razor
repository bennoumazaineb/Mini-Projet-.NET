    // CRUD Operations
    private async Task CreateCategory()
    {
        try
        {
            isCreating = true;
            StateHasChanged();

            var result = await CategoryService.CreateCategoryAsync(newCategory);

            if (result != null)
            {
                CloseModal();
                await LoadCategories();
            }
            else
            {
                errorMessage = "Échec de la création de la catégorie";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }

    private async Task UpdateCategory()
    {
        if (selectedCategory == null) return;

        try
        {
            isUpdating = true;
            StateHasChanged();

            var result = await CategoryService.UpdateCategoryAsync(selectedCategory.Id, editCategory);

            if (result != null)
            {
                CloseModal();
                await LoadCategories();
            }
            else
            {
                errorMessage = "Échec de la modification de la catégorie";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isUpdating = false;
            StateHasChanged();
        }
    }

    private async Task DeleteCategory()
    {
        if (selectedCategory == null) return;

        // Check if category has articles
        if (selectedCategory.ArticleCount > 0)
        {
            errorMessage = "Impossible de supprimer une catégorie contenant des articles";
            return;
        }

        try
        {
            isDeleting = true;
            StateHasChanged();

            var success = await CategoryService.DeleteCategoryAsync(selectedCategory.Id);

            if (success)
            {
                CloseModal();
                await LoadCategories();
            }
            else
            {
                errorMessage = "Échec de la suppression de la catégorie";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

