@page "/gestion-articles"
@using BlazorApp1.Models
@using BlazorApp1.Services
@using System.ComponentModel.DataAnnotations
@inject IArticleService ArticleService
@inject ICategoryService CategoryService
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>Gestion des Articles - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-boxes icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Gestion des Articles & Stock</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                        <span class="sep">/</span>
                        <span class="current">
                            <i class="fas fa-boxes"></i> Gestion des articles
                        </span>
                    </nav>
                </div>
                <div class="header-right">
                    <a href="/gestion-categories" class="btn btn-outline" title="Gestion Catégories">
                        <i class="fas fa-tags me-2"></i>Catégories
                    </a>
                    <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Articles</h2>
                        <p>Gérez votre catalogue d'articles, le stock et les garanties</p>

                        <div class="welcome-actions">
                            <button class="btn btn-primary btn-shine" @onclick="ShowCreateModal">
                                <i class="fas fa-plus-circle icon-float me-2"></i>
                                Nouvel Article
                            </button>
                            <button class="btn btn-outline" @onclick="ToggleStats">
                                <i class="fas fa-chart-bar icon-float me-2"></i>
                                Voir les Statistiques
                            </button>
                            <NavLink href="/gestion-categories" class="btn btn-outline">
                                <i class="fas fa-chart-bar icon-float me-2"></i>
                                Voir les Catégories
                            </NavLink>

                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick='() => FilterArticles("all")'>
                            <div class="mini-ico">
                                <i class="fas fa-box icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total Articles</div>
                                <div class="mini-value">@stats.TotalArticles</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterArticles("available")'>
                            <div class="mini-ico">
                                <i class="fas fa-check-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Disponibles</div>
                                <div class="mini-value">@stats.AvailableArticles</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterArticles("outofstock")'>
                            <div class="mini-ico">
                                <i class="fas fa-times-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Rupture</div>
                                <div class="mini-value">@stats.OutOfStockArticles</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (showStats)
                {
                    <div class="welcome-stats">
                        <div class="stat-card">
                            <div class="stat-ico">
                                <i class="fas fa-money-bill-wave icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.TotalStockValue.ToString("C2")</h3>
                                <p>Valeur totale du stock</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico success">
                                <i class="fas fa-chart-line icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.AverageProfitMargin.ToString("F1")%</h3>
                                <p>Marge moyenne</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico info">
                                <i class="fas fa-shield-alt icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.UnderWarrantyCount</h3>
                                <p>Sous garantie</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico warn">
                                <i class="fas fa-tags icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.CategoriesCount</h3>
                                <p>Catégories</p>
                            </div>
                        </div>
                    </div>
                }
            </section>

            <!-- Search & Filters -->
            <section class="panel search-section">
                <div class="search-form">
                    <div class="search-grid">
                        <div class="form-group">
                            <label><i class="fas fa-search"></i> Recherche</label>
                            <div class="quick-search">
                                <i class="fas fa-search"></i>
                                <input type="text"
                                       placeholder="Référence, désignation..."
                                       @bind="searchQuery"
                                       @bind:event="oninput" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-filter"></i> Filtres</label>
                            <select class="form-select" @bind="selectedFilter">
                                <option value="all">Tous les articles</option>
                                <option value="available">Disponibles seulement</option>
                                <option value="outofstock">En rupture</option>
                                <option value="recent">Récemment ajoutés</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-tag"></i> Catégorie</label>
                            <select class="form-select" @bind="selectedCategoryId">
                                <option value="0">Toutes catégories</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-sort"></i> Trier par</label>
                            <select class="form-select" @bind="sortBy">
                                <option value="date">Date d'ajout</option>
                                <option value="name">Nom</option>
                                <option value="price">Prix</option>
                                <option value="reference">Référence</option>
                            </select>
                        </div>
                    </div>

                    <div class="search-actions">
                        <button class="btn btn-secondary" @onclick="ResetFilters">
                            <i class="fas fa-redo me-2"></i>Réinitialiser
                        </button>
                        <button class="btn btn-primary" @onclick="LoadArticles">
                            <i class="fas fa-sync-alt me-2"></i>Actualiser
                        </button>
                    </div>
                </div>
            </section>

            <!-- Articles Grid -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">Catalogue d'Articles</h2>
                    <div class="table-actions">
                        <div class="view-toggle">
                            <button class="btn-icon @(viewMode == "grid" ? "active" : "")"
                                    @onclick='() => SetViewMode("grid")'
                                    title="Vue Grille">
                                <i class="fas fa-th-large"></i>
                            </button>

                            <button class="btn-icon @(viewMode == "list" ? "active" : "")"
                                    @onclick='() => SetViewMode("list")'
                                    title="Vue Liste">
                                <i class="fas fa-list"></i>
                            </button>

                        </div>
                        <button class="btn-icon" title="Exporter" @onclick="ExportArticles">
                            <i class="fas fa-download"></i>
                        </button>
                        <button class="btn-icon" title="Actualiser" @onclick="LoadArticles">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des articles...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadArticles">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredArticles.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucun article trouvé</h4>
                            <p>Commencez par créer votre premier article</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-plus-circle me-2"></i>
                            Créer un article
                        </button>
                    </div>
                }
                else
                {
                    @if (viewMode == "grid")
                    {
                        <!-- Vue Grille (Cartes) -->
                        <div class="articles-grid slide-up">
                            @foreach (var article in filteredArticles)
                            {
                                <div class="article-card fade-in">
                                    <div class="article-card-header">
                                        <div class="article-status @(article.EstDisponible ? "available" : "outofstock")">
                                            <i class="fas fa-circle"></i>
                                            @(article.EstDisponible ? "Disponible" : "Rupture")
                                        </div>
                                        <div class="article-actions">
                                            <button class="btn-action edit" @onclick="() => ShowEditModal(article)" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-action delete" @onclick="() => ConfirmDelete(article)" title="Supprimer">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="article-card-body">
                                        <div class="article-image">
                                            <i class="fas fa-box"></i>
                                        </div>

                                        <div class="article-info">
                                            <h3 class="article-reference">@article.Reference</h3>
                                            <h4 class="article-designation">@article.Designation</h4>

                                            @if (!string.IsNullOrEmpty(article.Description))
                                            {
                                                <p class="article-description">@article.Description</p>
                                            }

                                            <div class="article-category">
                                                <i class="fas fa-tag"></i>
                                                <span>@(article.CategoryName ?? "Non catégorisé")</span>
                                            </div>

                                            <div class="article-dates">
                                                <div class="date-item">
                                                    <i class="fas fa-calendar-plus"></i>
                                                    <span>Ajouté: @article.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="article-card-footer">
                                        <div class="price-section">
                                            <div class="price-row">
                                                <span>Achat:</span>
                                                <strong>@article.PrixAchat.ToString("C2")</strong>
                                            </div>
                                            <div class="price-row">
                                                <span>Vente:</span>
                                                <strong class="text-success">@article.PrixVente.ToString("C2")</strong>
                                            </div>
                                            <div class="price-row">
                                                <span>Marge:</span>
                                                <strong class="text-info">
                                                    @{
                                                        var marge = article.PrixAchat > 0 ?
                                                        ((article.PrixVente - article.PrixAchat) / article.PrixAchat * 100) : 0;
                                                    }
                                                    @marge.ToString("F1")%
                                                </strong>
                                            </div>
                                        </div>

                                        <div class="warranty-section">
                                            <div class="warranty-badge @(article.DureeGarantieMois > 0 ? "active" : "none")">
                                                <i class="fas fa-shield-alt"></i>
                                                <span>@article.DureeGarantieMois mois</span>
                                            </div>
                                            <button class="btn-check-warranty"
                                                    @onclick="() => CheckWarranty(article.Id)"
                                                    title="Vérifier garantie">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Vue Liste -->
                        <div class="table-responsive slide-up">
                            <table class="articles-table">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Désignation</th>
                                        <th>Catégorie</th>
                                        <th>Prix Vente</th>
                                        <th>Garantie</th>
                                        <th>Statut</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var article in filteredArticles)
                                    {
                                        <tr class="article-row">
                                            <td>
                                                <div class="article-cell">
                                                    <strong>@article.Reference</strong>
                                                </div>
                                            </td>
                                            <td>@article.Designation</td>
                                            <td>
                                                <span class="category-badge">
                                                    <i class="fas fa-tag"></i>
                                                    @(article.CategoryName ?? "-")
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-success">@article.PrixVente.ToString("C2")</strong>
                                            </td>
                                            <td>
                                                <div class="warranty-indicator @(article.DureeGarantieMois > 0 ? "has-warranty" : "no-warranty")">
                                                    <i class="fas fa-shield-alt"></i>
                                                    <span>@article.DureeGarantieMois mois</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="status-badge @(article.EstDisponible ? "available" : "outofstock")">
                                                    @(article.EstDisponible ? "Disponible" : "Rupture")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="actions-cell">
                                                    <button class="btn-action edit"
                                                            @onclick="() => ShowEditModal(article)"
                                                            title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn-action warranty"
                                                            @onclick="() => CheckWarranty(article.Id)"
                                                            title="Vérifier garantie">
                                                        <i class="fas fa-shield-alt"></i>
                                                    </button>
                                                    <button class="btn-action delete"
                                                            @onclick="() => ConfirmDelete(article)"
                                                            title="Supprimer">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@filteredArticles.Count</strong> articles
                            <span class="filter-indicator">
                                @if (selectedFilter != "all")
                                {
                                    <span>
                                        <i class="fas fa-filter ms-2"></i>
                                        Filtre: @selectedFilter
                                    </span>
                                }
                                @if (selectedCategoryId > 0)
                                {
                                    <span>
                                        <i class="fas fa-tag ms-2"></i>
                                        Catégorie: @categories.FirstOrDefault(c => c.Id == selectedCategoryId)?.Name
                                    </span>
                                }
                            </span>
                        </span>
                        <div class="summary-actions">
                            <button class="btn btn-sm btn-outline" @onclick="ResetFilters">
                                Tout voir
                            </button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-boxes"></i>
                    Gestion des Articles © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-database"></i> @stats.TotalArticles articles
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-money-bill-wave"></i> @stats.TotalStockValue.ToString("C2")
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create Article -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        <h3>Créer un nouvel article</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@newArticle" OnValidSubmit="CreateArticle">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="reference" class="form-label">
                                    <i class="fas fa-barcode"></i> Référence *
                                </label>
                                <InputText id="reference" class="form-input" @bind-Value="newArticle.Reference" />
                                <ValidationMessage For="@(() => newArticle.Reference)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="designation" class="form-label">
                                    <i class="fas fa-tag"></i> Désignation *
                                </label>
                                <InputText id="designation" class="form-input" @bind-Value="newArticle.Designation" />
                                <ValidationMessage For="@(() => newArticle.Designation)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="description" class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <InputTextArea id="description" class="form-input" @bind-Value="newArticle.Description" rows="3" />
                                <ValidationMessage For="@(() => newArticle.Description)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="prixAchat" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> Prix d'achat *
                                </label>
                                <InputNumber id="prixAchat" class="form-input" @bind-Value="newArticle.PrixAchat" />
                                <ValidationMessage For="@(() => newArticle.PrixAchat)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="prixVente" class="form-label">
                                    <i class="fas fa-money-bill"></i> Prix de vente *
                                </label>
                                <InputNumber id="prixVente" class="form-input" @bind-Value="newArticle.PrixVente" />
                                <ValidationMessage For="@(() => newArticle.PrixVente)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="dureeGarantie" class="form-label">
                                    <i class="fas fa-shield-alt"></i> Garantie (mois) *
                                </label>
                                <InputNumber id="dureeGarantie" class="form-input" @bind-Value="newArticle.DureeGarantieMois" />
                                <ValidationMessage For="@(() => newArticle.DureeGarantieMois)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="categoryId" class="form-label">
                                    <i class="fas fa-tags"></i> Catégorie *
                                </label>
                                <select id="categoryId" class="form-select" @bind="newArticle.CategoryId">
                                    <option value="">Sélectionnez une catégorie</option>
                                    @foreach (var cat in categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => newArticle.CategoryId)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="dateMiseEnStock" class="form-label">
                                    <i class="fas fa-calendar"></i> Date mise en stock
                                </label>
                                <InputDate id="dateMiseEnStock" class="form-input" @bind-Value="newArticle.DateMiseEnStock" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-toggle-on"></i> Disponibilité
                                </label>
                                <div class="form-check">
                                    <input type="checkbox" id="estDisponible" @bind="newArticle.EstDisponible" class="form-check-input" />
                                    <label for="estDisponible" class="form-check-label">Disponible en stock</label>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                                @if (isCreating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Créer l'article
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Edit Article -->
    @if (showEditModal && selectedArticle != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-edit me-2"></i>
                        <h3>Modifier l'article</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@editArticle" OnValidSubmit="UpdateArticle">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="editReference" class="form-label">
                                    <i class="fas fa-barcode"></i> Référence *
                                </label>
                                <InputText id="editReference" class="form-input" @bind-Value="editArticle.Reference" />
                                <ValidationMessage For="@(() => editArticle.Reference)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="editDesignation" class="form-label">
                                    <i class="fas fa-tag"></i> Désignation *
                                </label>
                                <InputText id="editDesignation" class="form-input" @bind-Value="editArticle.Designation" />
                                <ValidationMessage For="@(() => editArticle.Designation)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="editDescription" class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <InputTextArea id="editDescription" class="form-input" @bind-Value="editArticle.Description" rows="3" />
                            </div>

                            <div class="form-group">
                                <label for="editPrixAchat" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> Prix d'achat *
                                </label>
