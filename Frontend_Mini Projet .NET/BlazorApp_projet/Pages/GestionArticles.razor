        categories = await CategoryService.GetAllCategoriesAsync();
    }

    private async Task LoadStats()
    {
        stats = await ArticleService.GetArticleStatsAsync();
    }

    private void ApplyFilters()
    {
        var filtered = articles.AsEnumerable();

        // Search filter
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            filtered = filtered.Where(a =>
                a.Reference.ToLower().Contains(query) ||
                a.Designation.ToLower().Contains(query) ||
                (a.Description != null && a.Description.ToLower().Contains(query))
            );
        }

        // Status filter
        filtered = selectedFilter switch
        {
            "available" => filtered.Where(a => a.EstDisponible),
            "outofstock" => filtered.Where(a => !a.EstDisponible),
            "recent" => filtered.Where(a => a.CreatedAt >= DateTime.Now.AddDays(-7)),
            _ => filtered
        };

        // Category filter
        if (selectedCategoryId > 0)
        {
            filtered = filtered.Where(a => a.CategoryId == selectedCategoryId);
        }

        // Sorting
        filtered = sortBy switch
        {
            "name" => filtered.OrderBy(a => a.Designation),
            "price" => filtered.OrderByDescending(a => a.PrixVente),
            "reference" => filtered.OrderBy(a => a.Reference),
            _ => filtered.OrderByDescending(a => a.CreatedAt)
        };

        filteredArticles = filtered.ToList();
    }

