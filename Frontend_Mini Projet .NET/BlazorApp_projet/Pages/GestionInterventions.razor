@page "/gestion-interventions"
@using BlazorApp1.Models
@using BlazorApp1.Services
@using System.ComponentModel.DataAnnotations
@inject IInterventionService InterventionService
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>Gestion des Interventions - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-tools icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Gestion des Interventions</span>
                        </div>
                    </a>
                    <nav class="breadcrumb">
                        <a href="/home">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                        <span class="sep">/</span>
                        <span class="current">
                            <i class="fas fa-tools"></i> Interventions
                        </span>
                    </nav>
                </div>
                <div class="header-right">
                    <button type="button" class="logout-btn" title="Déconnexion" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="dashboard-main">
        <div class="container">
            <!-- Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Interventions</h2>
                        <p>Planifiez, suivez et gérez toutes vos interventions techniques</p>

                        <div class="welcome-actions">
                            <button class="btn btn-primary btn-shine" @onclick="ShowCreateModal">
                                <i class="fas fa-plus-circle icon-float me-2"></i>
                                Nouvelle Intervention
                            </button>
                            <button class="btn btn-outline" @onclick="ToggleStats">
                                <i class="fas fa-chart-bar icon-float me-2"></i>
                                @(showStats ? "Masquer Stats" : "Voir Stats")
                            </button>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick='() => FilterInterventions("all")'>
                            <div class="mini-ico">
                                <i class="fas fa-tasks icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total</div>
                                <div class="mini-value">@stats.TotalInterventions</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByStatus("EnCours")'>
                            <div class="mini-ico" style="background: rgba(52,152,219,.2);">
                                <i class="fas fa-play-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">En Cours</div>
                                <div class="mini-value">@stats.InterventionsEnCours</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => FilterByStatus("Terminée")'>
                            <div class="mini-ico" style="background: rgba(46,204,113,.2);">
                                <i class="fas fa-check-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Terminées</div>
                                <div class="mini-value">@stats.InterventionsTerminees</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (showStats)
                {
                    <div class="welcome-stats">
                        <div class="stat-card">
                            <div class="stat-ico">
                                <i class="fas fa-money-bill-wave icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.TotalCost.ToString("C2")</h3>
                                <p>Coût total</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico success">
                                <i class="fas fa-calendar-check icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.InterventionsThisMonth</h3>
                                <p>Ce mois</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico info">
                                <i class="fas fa-clock icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.AverageCompletionTime.ToString("F1")h</h3>
                                <p>Temps moyen</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico warn">
                                <i class="fas fa-exclamation-triangle icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@stats.UrgentInterventions</h3>
                                <p>Urgentes</p>
                            </div>
                        </div>
                    </div>
                }
            </section>

            <!-- Search & Filters -->
            <section class="panel search-section">
                <div class="search-form">
                    <div class="search-grid">
                        <div class="form-group">
                            <label><i class="fas fa-search"></i> Recherche</label>
                            <div class="quick-search">
                                <i class="fas fa-search"></i>
                                <input type="text"
                                       placeholder="ID, description, technicien..."
                                       @bind="searchQuery"
                                       @bind:event="oninput" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-filter"></i> Statut</label>
                            <select class="form-select" @bind="selectedStatus">
                                <option value="all">Tous les statuts</option>
                                @foreach (var status in availableStatuses)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-calendar"></i> Période</label>
                            <div style="display: flex; gap: 0.5rem;">
                                <input type="date" class="form-input" @bind="startDate" style="flex: 1;" />
                                <span style="align-self: center;">à</span>
                                <input type="date" class="form-input" @bind="endDate" style="flex: 1;" />
                            </div>
                        </div>

                    </div>

                    <div class="search-actions">
                        <button class="btn btn-secondary" @onclick="ResetFilters">
                            <i class="fas fa-redo me-2"></i>Réinitialiser
                        </button>
                        <button class="btn btn-primary" @onclick="LoadInterventions">
                            <i class="fas fa-sync-alt me-2"></i>Actualiser
                        </button>
                    </div>
                </div>
            </section>

            <!-- Interventions Grid -->
            <section class="panel">
                <div class="panel-head">
                    <h2 class="section-title">Liste des Interventions</h2>
                    <div class="table-actions">
                        <div class="view-toggle">
                            <button class="btn-icon @(viewMode == "grid" ? "active" : "")"
                                    @onclick='() => SetViewMode("grid")'
                                    title="Vue Grille">
                                <i class="fas fa-th-large"></i>
                            </button>

                            <button class="btn-icon @(viewMode == "list" ? "active" : "")"
                                    @onclick='() => SetViewMode("list")'
                                    title="Vue Liste">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                        <button class="btn-icon" title="Actualiser" @onclick="LoadInterventions">
                            <i class="fas fa-redo-alt @(isLoading ? "fa-spin" : "")"></i>
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="loading-state">
                        <div class="spinner">
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                            <div class="spinner-blade"></div>
                        </div>
                        <p>Chargement des interventions...</p>
                    </div>
                }
                else if (errorMessage != null)
                {
                    <div class="error-state fade-in">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="error-content">
                            <h4>Une erreur est survenue</h4>
                            <p>@errorMessage</p>
                        </div>
                        <button class="btn btn-outline" @onclick="LoadInterventions">
                            <i class="fas fa-redo me-2"></i>Réessayer
                        </button>
                    </div>
                }
                else if (!filteredInterventions.Any())
                {
                    <div class="empty-state fade-in">
                        <div class="empty-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                        <div class="empty-content">
                            <h4>Aucune intervention trouvée</h4>
                            <p>Commencez par créer votre première intervention</p>
                        </div>
                        <button class="btn btn-primary" @onclick="ShowCreateModal">
                            <i class="fas fa-plus-circle me-2"></i>
                            Créer une intervention
                        </button>
                    </div>
                }
                else
                {
                    @if (viewMode == "grid")
                    {
                        <!-- Vue Grille (Cartes) -->
                        <div class="interventions-grid slide-up">
                            @foreach (var intervention in filteredInterventions)
                            {
                                <div class="intervention-card fade-in">
                                    <div class="intervention-card-header">
                                        <div class="priority-badge @GetPriorityClass(intervention.Priority)">
                                            <i class="fas fa-flag"></i>
                                            @intervention.Priority
                                        </div>
                                        <div class="intervention-actions">
                                            <button class="btn-action edit" @onclick="() => ShowEditModal(intervention)" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-action status" @onclick="() => ShowStatusModal(intervention)" title="Changer statut">
                                                <i class="fas fa-sync-alt"></i>
                                            </button>
                                            <button class="btn-action delete" @onclick="() => ConfirmDelete(intervention)" title="Supprimer">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="intervention-card-body">
                                        <div class="intervention-id">#@intervention.Id</div>

                                        <h3 class="intervention-title">@TruncateText(intervention.Description, 60)</h3>

                                        <div class="intervention-info">
                                            <div class="info-row">
                                                <i class="fas fa-user-cog"></i>
                                                <span>Technicien: <strong>@(intervention.TechnicianName ?? "Non assigné")</strong></span>
                                            </div>
                                            <div class="info-row">
                                                <i class="fas fa-calendar-alt"></i>
                                                <span>Date: @intervention.InterventionDate.ToString("dd/MM/yyyy HH:mm")</span>
                                            </div>
                                            <div class="info-row">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <span>Lieu: @(intervention.Location ?? "Non spécifié")</span>
                                            </div>
                                            @if (intervention.EstimatedHours.HasValue)
                                            {
                                                <div class="info-row">
                                                    <i class="fas fa-clock"></i>
                                                    <span>Durée estimée: @intervention.EstimatedHours h</span>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="intervention-card-footer">
                                        <div class="status-section">
                                            <span class="status-badge @GetStatusClass(intervention.Status)">
                                                @intervention.Status
                                            </span>
                                        </div>

                                        <div class="cost-section">
                                            @if (intervention.IsUnderWarranty)
                                            {
                                                <div class="warranty-badge">
                                                    <i class="fas fa-shield-alt"></i>
                                                    <span>Sous garantie</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="cost-amount">
                                                    <strong>@intervention.TotalCost?.ToString("C2")</strong>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Vue Liste -->
                        <div class="table-responsive slide-up">
                            <table class="interventions-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Description</th>
                                        <th>Technicien</th>
                                        <th>Date</th>
                                        <th>Statut</th>
                                        <th>Priorité</th>
                                        <th>Coût</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var intervention in filteredInterventions)
                                    {
                                        <tr class="intervention-row">
                                            <td>
                                                <div class="intervention-cell">
                                                    <strong>#@intervention.Id</strong>
                                                </div>
                                            </td>
                                            <td>@TruncateText(intervention.Description, 50)</td>
                                            <td>@(intervention.TechnicianName ?? "-")</td>
                                            <td>@intervention.InterventionDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="status-badge @GetStatusClass(intervention.Status)">
                                                    @intervention.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="priority-indicator @GetPriorityClass(intervention.Priority)">
                                                    @intervention.Priority
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                @if (intervention.IsUnderWarranty)
                                                {
                                                    <span class="warranty-label">
                                                        <i class="fas fa-shield-alt me-1"></i>Garantie
                                                    </span>
                                                }
                                                else
                                                {
                                                    <strong>@intervention.TotalCost?.ToString("C2")</strong>
                                                }
                                            </td>
                                            <td>
                                                <div class="actions-cell">
                                                    <button class="btn-action view"
                                                            @onclick="() => ViewDetails(intervention)"
                                                            title="Détails">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn-action edit"
                                                            @onclick="() => ShowEditModal(intervention)"
                                                            title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn-action status"
                                                            @onclick="() => ShowStatusModal(intervention)"
                                                            title="Changer statut">
                                                        <i class="fas fa-sync-alt"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <!-- Summary -->
                    <div class="table-summary slide-up">
                        <span class="summary-text">
                            Affichage de <strong>@filteredInterventions.Count</strong> interventions
                            <span class="filter-indicator">
                                @if (selectedStatus != "all")
                                {
                                    <span>
                                        <i class="fas fa-filter ms-2"></i>
                                        Statut: @selectedStatus
                                    </span>
                                }
                                @if (hasDateFilter)
                                {
                                    <span>
                                        <i class="fas fa-calendar ms-2"></i>
                                        Période: @startDate.ToString("dd/MM") - @endDate.ToString("dd/MM")
                                    </span>
                                }
                            </span>
                        </span>
                        <div class="summary-actions">
                            <button class="btn btn-sm btn-outline" @onclick="ResetFilters">
                                Tout voir
                            </button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-tools"></i>
                    Gestion des Interventions © @DateTime.Now.Year - Système SAV
                </p>
                <div class="footer-right">
                    <span class="footer-info">
                        <i class="fas fa-tasks"></i> @stats.TotalInterventions interventions
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-money-bill-wave"></i> @stats.TotalCost.ToString("C2")
                    </span>
                    <span class="footer-info">
                        <i class="fas fa-clock"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- MODAL: Create Intervention -->
    @if (showCreateModal)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>
                        <h3>Créer une nouvelle intervention</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@newIntervention" OnValidSubmit="CreateIntervention">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="reclamationId" class="form-label">
                                    <i class="fas fa-exclamation-circle"></i> Réclamation ID *
                                </label>
                                <InputNumber id="reclamationId" class="form-input" @bind-Value="newIntervention.ReclamationId" />
                                <ValidationMessage For="@(() => newIntervention.ReclamationId)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="technicianId" class="form-label">
                                    <i class="fas fa-user-cog"></i> Technicien ID *
                                </label>
                                <InputNumber id="technicianId" class="form-input" @bind-Value="newIntervention.TechnicianId" />
                                <ValidationMessage For="@(() => newIntervention.TechnicianId)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="interventionDate" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Date d'intervention *
                                </label>
                                <InputDate id="interventionDate" class="form-input" @bind-Value="newIntervention.InterventionDate" />
                                <ValidationMessage For="@(() => newIntervention.InterventionDate)" class="form-error" />
                            </div>

                            <div class="form-group full-width">
                                <label for="description" class="form-label">
                                    <i class="fas fa-align-left"></i> Description *
                                </label>
                                <InputTextArea id="description" class="form-input" @bind-Value="newIntervention.Description" rows="3" />
                                <ValidationMessage For="@(() => newIntervention.Description)" class="form-error" />
                            </div>

                            <div class="form-group">
                                <label for="status" class="form-label">
                                    <i class="fas fa-tasks"></i> Statut *
                                </label>
                                <select id="status" class="form-select" @bind="newIntervention.Status">
                                    @foreach (var status in availableStatuses)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="priority" class="form-label">
                                    <i class="fas fa-flag"></i> Priorité *
                                </label>
                                <select id="priority" class="form-select" @bind="newIntervention.Priority">
                                    <option value="Basse">Basse</option>
                                    <option value="Normal" selected>Normal</option>
                                    <option value="Haute">Haute</option>
                                    <option value="Urgente">Urgente</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="location" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> Lieu
                                </label>
                                <InputText id="location" class="form-input" @bind-Value="newIntervention.Location" />
                            </div>

                            <div class="form-group">
                                <label for="estimatedHours" class="form-label">
                                    <i class="fas fa-clock"></i> Heures estimées
                                </label>
                                <InputNumber id="estimatedHours" class="form-input" @bind-Value="newIntervention.EstimatedHours" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-shield-alt"></i> Sous garantie
                                </label>
                                <div class="form-check">
                                    <input type="checkbox" id="isUnderWarranty" @bind="newIntervention.IsUnderWarranty" class="form-check-input" />
                                    <label for="isUnderWarranty" class="form-check-label">Oui</label>
                                </div>
                            </div>

                            @if (!newIntervention.IsUnderWarranty)
                            {
                                <div class="form-group">
                                    <label for="partsCost" class="form-label">
                                        <i class="fas fa-cog"></i> Coût pièces
                                    </label>
                                    <InputNumber id="partsCost" class="form-input" @bind-Value="newIntervention.PartsCost" />
                                </div>

                                <div class="form-group">
                                    <label for="laborCost" class="form-label">
                                        <i class="fas fa-user-clock"></i> Coût main d'œuvre
                                    </label>
                                    <InputNumber id="laborCost" class="form-input" @bind-Value="newIntervention.LaborCost" />
                                </div>
                            }

                            <div class="form-group full-width">
                                <label for="notes" class="form-label">
                                    <i class="fas fa-sticky-note"></i> Notes
                                </label>
                                <InputTextArea id="notes" class="form-input" @bind-Value="newIntervention.Notes" rows="2" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                                Annuler
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                                @if (isCreating)
                                {
                                    <span class="spinner-small me-2"></span>
                                }
                                <i class="fas fa-save me-2"></i>
                                Créer l'intervention
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }

    <!-- MODAL: Edit Intervention -->
    @if (showEditModal && selectedIntervention != null)
    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header">
                    <div class="modal-title">
                        <i class="fas fa-edit me-2"></i>
                        <h3>Modifier l'intervention #@selectedIntervention.Id</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@editIntervention" OnValidSubmit="UpdateIntervention">
                        <DataAnnotationsValidator />
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="editInterventionDate" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Date d'intervention
                                </label>
                                <InputDate id="editInterventionDate" class="form-input" @bind-Value="editIntervention.InterventionDate" />
                            </div>

                            <div class="form-group full-width">
                                <label for="editDescription" class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <InputTextArea id="editDescription" class="form-input" @bind-Value="editIntervention.Description" rows="3" />
                            </div>

                            <div class="form-group">
                                <label for="editLocation" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> Lieu
                                </label>
                                <InputText id="editLocation" class="form-input" @bind-Value="editIntervention.Location" />
                            </div>

                            <div class="form-group">
                                <label for="editPriority" class="form-label">
                                    <i class="fas fa-flag"></i> Priorité
                                </label>
                                <select id="editPriority" class="form-select" @bind="editIntervention.Priority">
                                    <option value="Basse">Basse</option>
                                    <option value="Normal">Normal</option>
                                    <option value="Haute">Haute</option>
                                    <option value="Urgente">Urgente</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="editEstimatedHours" class="form-label">
                                    <i class="fas fa-clock"></i> Heures estimées
                                </label>
                                <InputNumber id="editEstimatedHours" class="form-input" @bind-Value="editIntervention.EstimatedHours" />
                            </div>

