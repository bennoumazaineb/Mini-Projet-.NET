    {
        <div class="modal-overlay fade-in" @onclick="CloseModal">
            <div class="modal-container scale-in" @onclick:stopPropagation>
                <div class="modal-header danger">
                    <div class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <h3>Confirmer la suppression</h3>
                    </div>
                    <button class="modal-close" @onclick="CloseModal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="delete-animation">
                        <div class="trash-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                    </div>

                    <div class="confirmation-message">
                        <div class="confirmation-title">Supprimer l'intervention #@selectedIntervention.Id ?</div>
                        <div class="confirmation-subtitle">
                            Cette action est définitive. L'intervention sera supprimée du système.
                        </div>
                    </div>

                    <div class="intervention-details">
                        <div class="detail-item">
                            <span class="detail-label">Description:</span>
                            <span class="detail-value">@TruncateText(selectedIntervention.Description, 100)</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Date:</span>
                            <span class="detail-value">@selectedIntervention.InterventionDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Statut:</span>
                            <span class="detail-value">@selectedIntervention.Status</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Coût:</span>
                            <span class="detail-value">@selectedIntervention.TotalCost?.ToString("C2")</span>
                        </div>
                    </div>

                    <div class="form-group full-width mt-3">
                        <label class="form-label">
                            <i class="fas fa-keyboard"></i> Tapez "SUPPRIMER" pour confirmer
                        </label>
                        <input type="text"
                               class="form-input"
                               placeholder="SUPPRIMER"
                               @bind="deleteConfirmationText"
                               @oninput="OnDeleteConfirmationChanged" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    <button type="button"
                            class="btn btn-danger"
                            @onclick="DeleteIntervention"
                            disabled="@(isDeleting || deleteConfirmationText != "SUPPRIMER")">
                        @if (isDeleting)
                        {
                            <span class="spinner-small me-2"></span>
                        }
                        <i class="fas fa-trash-alt me-2"></i>
                        Supprimer définitivement
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Notifications Container -->
    <div class="notifications-container">
        @foreach (var notification in notifications)
        {
            <div class="notification @notification.Type.ToString().ToLower() @(!notification.IsVisible ? "slide-out" : "")"
                 data-id="@notification.Id">
                <div class="notification-icon">
                    @if (notification.Type == NotificationType.Success)
                    {
                        <i class="fas fa-check-circle"></i>
                    }
                    else if (notification.Type == NotificationType.Error)
                    {
                        <i class="fas fa-exclamation-circle"></i>
                    }
                    else if (notification.Type == NotificationType.Warning)
                    {
                        <i class="fas fa-exclamation-triangle"></i>
                    }
                    else
                    {
                        <i class="fas fa-info-circle"></i>
                    }
                </div>
                <div class="notification-content">
                    <div class="notification-title">@notification.Title</div>
                    <div class="notification-message">@notification.Message</div>
                </div>
                <button class="notification-close" @onclick='() => RemoveNotification(notification.Id)'>
                    <i class="fas fa-times"></i>
                </button>
                <div class="notification-progress"></div>
            </div>
        }
    </div>
