    private ReclamationStats reclamationStats = new();
    private List<ReclamationResponse> recentReclamations = new();
    private bool isLoadingReclamations = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReclamationData();
    }

    private async Task LoadReclamationData()
    {
        try
        {
            isLoadingReclamations = true;
            StateHasChanged();

            // Charger les statistiques
            reclamationStats = await ReclamationService.GetReclamationStatsAsync();

            // Charger les réclamations récentes
            var allReclamations = await ReclamationService.GetAllReclamationsAsync();
            recentReclamations = allReclamations
                .OrderByDescending(r => r.DateCreation)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des données: {ex.Message}");
        }
        finally
        {
            isLoadingReclamations = false;
            StateHasChanged();
        }
    }

    private string GetActivityIcon(string statut)
    {
        return statut switch
        {
            "Traitee" => "fas fa-check-circle",
            "EnCours" => "fas fa-spinner",
            "NonTraitee" => "fas fa-clock",
            "Annulee" => "fas fa-ban",
            _ => "fas fa-info-circle"
        };
    }

    private string GetActivityIconClass(string statut)
    {
        return statut switch
        {
            "Traitee" => "success",
            "EnCours" => "warn",
            "NonTraitee" => "danger",
            "Annulee" => "info",
            _ => "info"
        };
    }

    private string GetProgressClass(int count)
    {
        if (count <= 5) return "p20";
        if (count <= 10) return "p40";
        if (count <= 15) return "p60";
        return "p85";
    }

