@page "/home"
@using BlazorApp1.Services
@using BlazorApp1.Models
@inject IAuthService AuthService
@inject IReclamationService ReclamationService
@inject NavigationManager Navigation

<PageTitle>Tableau de Bord - Système SAV</PageTitle>

<div class="dash-page page-enter">
    <!-- Background blobs -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Header -->
    <header class="dashboard-header">
        <div class="container">
            <!-- TOP HEADER -->
            <div class="header-content">
                <!-- LEFT -->
                <div class="header-left">
                    <a class="logo" href="/home">
                        <span class="logo-badge">
                            <i class="fas fa-headset icon-float"></i>
                        </span>
                        <div class="logo-text">
                            <h1>Service Après-Vente</h1>
                            <span class="logo-sub">Tableau de bord</span>
                        </div>
                    </a>

                    <nav class="breadcrumb">
                        <a href="/home"><i class="fas fa-home"></i> Accueil</a>
                        <span class="sep">›</span>
                        <span class="current">Dashboard</span>
                    </nav>
                </div>

                <!-- RIGHT -->
                <div class="header-right">
                    <div class="user-info">
                        <div class="user-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <span class="user-name">Bienvenue</span>

                        <button class="logout-btn" title="Déconnexion" @onclick="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- MAIN NAV -->
            <nav class="main-nav">
                <a href="/gestion-utilisateur" class="nav-item active">
                    <i class="fas fa-users-cog"></i>
                    <span>Utilisateurs</span>
                </a>

                <a href="/gestion-roles" class="nav-item">
                    <i class="fas fa-user-shield"></i>
                    <span>Rôles</span>
                </a>

                <a href="/gestion-articles" class="nav-item">
                    <i class="fas fa-box"></i>
                    <span>Articles</span>
                </a>
                <NavLink class="nav-item" href="/gestion-interventions">
                    <i class="fas fa-box"></i>
                    <span>Interventions</span>
                </NavLink>


                <a href="/gestion-reclamations" class="nav-item">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>Réclamations</span>
                </a>
            </nav>
        </div>
    </header>

    <!-- Main -->
    <main class="dashboard-main">
        <div class="container">

            <!-- Welcome / Hero -->
            <section class="welcome-section">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Bienvenue sur votre tableau de bord</h2>
                        <p>
                            Gérez efficacement les tickets, les interventions et les performances du SAV
                            depuis une interface unique.
                        </p>

                        <div class="welcome-actions">
                            <a class="btn btn-primary btn-shine" href="/tickets/new">
                                <i class="fas fa-plus-circle me-2 icon-float"></i>Nouveau ticket
                            </a>
                            <a class="btn btn-outline" href="/gestion-reclamations">
                                <i class="fas fa-tasks me-2 icon-float"></i>Voir les réclamations
                            </a>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card">
                            <div class="mini-ico">
                                <i class="fas fa-bolt icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Priorité</div>
                                <div class="mini-value">Urgences</div>
                            </div>
                        </div>

                        <div class="mini-card">
                            <div class="mini-ico">
                                <i class="fas fa-shield-alt icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Sécurité</div>
                                <div class="mini-value">Active</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="welcome-stats">
                    <div class="stat-card">
                        <div class="stat-ico">
                            <i class="fas fa-ticket-alt icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>24</h3>
                            <p>Tickets ouverts</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico success">
                            <i class="fas fa-check-circle icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>156</h3>
                            <p>Tickets résolus</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico info">
                            <i class="fas fa-users icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>12</h3>
                            <p>Techniciens actifs</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-ico warn">
                            <i class="fas fa-clock icon-float"></i>
                        </div>
                        <div class="stat-meta">
                            <h3>2.3h</h3>
                            <p>Temps moyen de réponse</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Réclamations Section -->
            <section class="welcome-section reclamations-hero">
                <div class="welcome-top">
                    <div class="welcome-text">
                        <h2>Gestion des Réclamations</h2>
                        <p>Suivi en temps réel de tous les tickets de réclamation clients</p>

                        <div class="welcome-actions">
                            <a class="btn btn-primary btn-shine" href="/gestion-reclamations">
                                <i class="fas fa-clipboard-check me-2 icon-float"></i>Gérer les réclamations
                            </a>
                            <a class="btn btn-outline" href="/gestion-reclamations?new=true">
                                <i class="fas fa-plus-circle me-2 icon-float"></i>Nouvelle réclamation
                            </a>
                        </div>
                    </div>

                    <div class="welcome-mini-cards">
                        <div class="mini-card" @onclick='() => NavigateToReclamations("all")'>
                            <div class="mini-ico">
                                <i class="fas fa-clipboard-list icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Total</div>
                                <div class="mini-value">@reclamationStats.TotalReclamations</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => NavigateToReclamations("NonTraitee")'>
                            <div class="mini-ico">
                                <i class="fas fa-clock icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Non Traitées</div>
                                <div class="mini-value">@reclamationStats.NonTraitees</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => NavigateToReclamations("EnCours")'>
                            <div class="mini-ico">
                                <i class="fas fa-spinner icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">En Cours</div>
                                <div class="mini-value">@reclamationStats.EnCours</div>
                            </div>
                        </div>

                        <div class="mini-card" @onclick='() => NavigateToReclamations("Traitee")'>
                            <div class="mini-ico">
                                <i class="fas fa-check-circle icon-float"></i>
                            </div>
                            <div>
                                <div class="mini-title">Traitées</div>
                                <div class="mini-value">@reclamationStats.Traitees</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (isLoadingReclamations)
                {
                    <div class="stat-card loading-placeholder">
                        <div class="spinner-small"></div>
                        <p>Chargement des statistiques...</p>
                    </div>
                }
                else
                {
                    <div class="welcome-stats">
                        <div class="stat-card">
                            <div class="stat-ico">
                                <i class="fas fa-user-tie icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@reclamationStats.AvecResponsable</h3>
                                <p>Avec responsable assigné</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico success">
                                <i class="fas fa-shield-alt icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@reclamationStats.SousGarantie</h3>
                                <p>Sous garantie</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico info">
                                <i class="fas fa-calendar-alt icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@reclamationStats.MoyenneJours.ToString("F1") j</h3>
                                <p>Temps moyen de traitement</p>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-ico warn">
                                <i class="fas fa-money-bill-wave icon-float"></i>
                            </div>
                            <div class="stat-meta">
                                <h3>@reclamationStats.TotalMontantFacture.ToString("C2")</h3>
                                <p>Valeur totale</p>
                            </div>
                        </div>
                    </div>
                }
            </section>

            <!-- Grid: Quick actions + Activity -->
            <section class="grid-2">
                <!-- Quick Actions -->
                <div class="panel">
                    <div class="panel-head">
                        <h2 class="section-title">Actions rapides</h2>
                        <a class="link" href="/gestion-reclamations">Gérer tout</a>
                    </div>

                    <div class="quick-actions-grid">
                        <a class="action-card" href="/gestion-reclamations?new=true">
                            <div class="action-icon">
                                <i class="fas fa-plus-circle icon-float"></i>
                            </div>
                            <div>
                                <h3>Nouvelle réclamation</h3>
                                <p>Créer un ticket de support</p>
                            </div>
                        </a>

                        <a class="action-card" href="/gestion-reclamations">
                            <div class="action-icon">
                                <i class="fas fa-tasks icon-float"></i>
                            </div>
                            <div>
                                <h3>Gérer réclamations</h3>
                                <p>Suivre et organiser</p>
                            </div>
                        </a>

                        <a class="action-card" href="/gestion-utilisateur">
                            <div class="action-icon">
                                <i class="fas fa-user-cog icon-float"></i>
                            </div>
                            <div>
                                <h3>Utilisateurs</h3>
                                <p>Gérer les comptes</p>
                            </div>
                        </a>

                        <a class="action-card" href="/gestion-articles">
                            <div class="action-icon">
                                <i class="fas fa-chart-bar icon-float"></i>
                            </div>
                            <div>
                                <h3>Articles</h3>
                                <p>Analyses et stats</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Activity -->
                <div class="panel">
                    <div class="panel-head">
                        <h2 class="section-title">Activité récente</h2>
                        <a class="link" href="/gestion-reclamations">Voir tout</a>
                    </div>

                    <div class="activity-list">
                        @if (recentReclamations.Any())
                        {
                            @foreach (var reclamation in recentReclamations.Take(4))
                            {
                                <div class="activity-item">
                                    <div class="activity-icon @GetActivityIconClass(reclamation.Statut)">
                                        <i class="@GetActivityIcon(reclamation.Statut)"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h4>Réclamation #@reclamation.Id: @reclamation.Titre</h4>
                                        <p>Client: @reclamation.ClientNom</p>
                                        <span class="activity-time">@reclamation.DateCreation.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="activity-item">
                                <div class="activity-icon info">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="activity-content">
                                    <h4>Aucune réclamation</h4>
                                    <p>Pas d'activité récente</p>
                                    <span class="activity-time">À jour</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>

            <!-- Performance Section -->
            <section class="panel performance-section">
                <div class="panel-head">
                    <h2 class="section-title">Performances du SAV</h2>
                    <span class="muted">Aperçu global</span>
                </div>

                <div class="performance-grid">
                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>Taux de satisfaction</h3>
                            <span class="performance-value success">94%</span>
                        </div>
                        <div class="performance-progress">
                            <div class="progress-bar p94"></div>
                        </div>
                    </div>

                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>Temps de résolution moyen</h3>
                            <span class="performance-value info">4.2h</span>
                        </div>
                        <div class="performance-progress">
                            <div class="progress-bar p85"></div>
                        </div>
                    </div>

                    <div class="performance-card">
                        <div class="performance-header">
                            <h3>Tickets en attente</h3>
                            <span class="performance-value warn">@reclamationStats.NonTraitees</span>
                        </div>
                        <div class="performance-progress">
                            <div class="progress-bar @GetProgressClass(reclamationStats.NonTraitees)"></div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container">
            <div class="footer-content">
                <p class="footer-left">
                    <i class="fas fa-info-circle"></i>
                    Service Après-Vente © @DateTime.Now.Year - Tous droits réservés
                </p>
                <div class="footer-right">
                    <a href="#"><i class="fas fa-question-circle"></i> Aide</a>
                    <a href="#"><i class="fas fa-cog"></i> Paramètres</a>
                    <a href="#"><i class="fas fa-envelope"></i> Contact</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    :root {
        --primary: #4361ee;
        --primary-dark: #3a56d4;
        --secondary: #7209b7;
        --success: #2ecc71;
        --warning: #f39c12;
        --info: #3498db;
        --danger: #e74c3c;
        --dark: #2d3748;
        --gray: #718096;
        --light: #f7f8fb;
        --card: #ffffff;
        --border: #e2e8f0;
        --shadow: 0 14px 35px rgba(0,0,0,.10);
        --radius: 14px;
        --transition: all .25s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter',-apple-system,BlinkMacSystemFont,sans-serif;
        background: var(--light);
        color: var(--dark);
        line-height: 1.6;
    }

    .main-nav {
        display: flex;
        gap: 1rem;
        margin-top: .8rem;
        padding: .6rem 0;
        border-top: 1px solid var(--border);
    }

    .dashboard-header {
        position: sticky;
        top: 0;
        z-index: 50;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(14px);
        border-bottom: 1px solid rgba(226, 232, 240, .8);
        animation: headerDrop .45s ease-out;
    }

    @@keyframes headerDrop {
        from {
            opacity: 0;
            transform: translateY(-12px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .main-nav {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.2rem;
        padding: .7rem 0 .9rem;
        animation: navFade .6s ease both;
    }

    @@keyframes navFade {
        from {
            opacity: 0;
            transform: translateY(-6px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .nav-item {
        position: relative;
        display: flex;
        align-items: center;
        gap: .5rem;
        padding: .55rem 1.1rem;
        border-radius: 14px;
        text-decoration: none;
        color: var(--gray);
        font-weight: 800;
        transition: all .3s ease;
        overflow: hidden;
    }

        .nav-item::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            opacity: 0;
            z-index: -1;
            transition: opacity .35s ease;
        }

        .nav-item:hover::before,
        .nav-item.active::before {
            opacity: 1;
        }

        .nav-item:hover,
        .nav-item.active {
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(67,97,238,.35);
        }

        .nav-item i {
            font-size: 1rem;
        }

    .user-info {
        transition: transform .25s ease, box-shadow .25s ease;
    }

        .user-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(0,0,0,.12);
        }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .dash-page {
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .page-enter {
        animation: pageEnter .35s ease both;
    }

    @@keyframes pageEnter {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .bg-blobs {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
        z-index: 0;
    }

    .blob {
        position: absolute;
        border-radius: 999px;
        filter: blur(30px);
        opacity: .35;
        animation: blobFloat 10s ease-in-out infinite;
        background: radial-gradient(circle at 30% 30%, rgba(114,9,183,.55), rgba(67,97,238,.35));
    }

    .b1 {
        width: 420px;
        height: 420px;
        top: -160px;
        left: -140px;
    }

    .b2 {
        width: 520px;
        height: 520px;
        bottom: -220px;
        right: -220px;
        animation-delay: .6s;
    }

    .b3 {
        width: 320px;
        height: 320px;
        top: 25%;
        right: 20%;
        opacity: .25;
        animation-delay: 1.1s;
    }

    @@keyframes blobFloat {
        0% {
            transform: translateY(0) translateX(0) scale(1);
        }

        50% {
            transform: translateY(-18px) translateX(10px) scale(1.03);
        }

        100% {
            transform: translateY(0) translateX(0) scale(1);
        }
    }

    .icon-float {
        display: inline-block;
        animation: iconFloat 3.2s ease-in-out infinite;
    }

    @@keyframes iconFloat {
        0% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-3px) scale(1.06);
        }

        100% {
            transform: translateY(0) scale(1);
        }
    }

    .dashboard-header {
        position: sticky;
        top: 0;
        z-index: 20;
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(226,232,240,.8);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        position: relative;
        z-index: 2;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 1.4rem;
        flex-wrap: wrap;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: .9rem;
        text-decoration: none;
        color: inherit;
    }

    .logo-badge {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        box-shadow: 0 10px 22px rgba(67,97,238,.22);
    }

    .logo-text h1 {
        font-size: 1.1rem;
        font-weight: 900;
        margin: 0;
        letter-spacing: -.2px;
    }

    .logo-sub {
        font-size: .85rem;
        color: var(--gray);
        display: block;
        margin-top: -2px;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: .6rem;
        color: var(--gray);
        font-size: .92rem;
    }

        .breadcrumb a {
            color: var(--gray);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: .5rem;
            transition: var(--transition);
        }

            .breadcrumb a:hover {
                color: var(--primary);
            }

    .sep {
        opacity: .6;
    }

    .current {
        color: var(--dark);
        font-weight: 700;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: .9rem;
        padding: .55rem .75rem;
        background: rgba(247,248,251,.9);
        border: 1px solid rgba(226,232,240,.9);
        border-radius: var(--radius);
        box-shadow: 0 8px 20px rgba(0,0,0,.06);
    }

    .user-avatar {
        width: 42px;
        height: 42px;
        border-radius: 999px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.25rem;
    }

    .user-details {
        display: flex;
        flex-direction: column;
        line-height: 1.1;
    }

    .user-name {
        font-weight: 800;
        font-size: .92rem;
    }

    .logout-btn {
        background: transparent;
        border: none;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--danger);
        transition: var(--transition);
    }

        .logout-btn:hover {
            background: rgba(67,97,238,.10);
            color: var(--primary-dark);
            transform: translateY(-1px);
        }

    .dashboard-main {
        position: relative;
        z-index: 1;
        padding: 1.8rem 0 2rem;
        min-height: calc(100vh - 140px);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 18px;
        border-radius: var(--radius);
        font-weight: 850;
        text-decoration: none;
        transition: var(--transition);
        border: 2px solid transparent;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: #fff;
        color: var(--primary);
        box-shadow: 0 14px 30px rgba(0,0,0,.12);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
        }

    .btn-outline {
        background: transparent;
        border-color: rgba(255,255,255,.55);
        color: #fff;
    }

        .btn-outline:hover {
            background: rgba(255,255,255,.14);
            transform: translateY(-2px);
        }

    .btn-shine::before {
        content: '';
        position: absolute;
        top: 0;
        left: -120%;
