@page "/"

<PageTitle>Service Après-Vente - Accueil</PageTitle>

<div class="index-page page-enter">

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <div class="hero-badge">
                    <i class="fas fa-bolt me-2"></i>
                    SYSTÈME SAV PROFESSIONNEL
                </div>

                <h1 class="hero-title">
                    Gestion de Service Après-Vente
                </h1>

                <p class="hero-subtitle">
                    Plateforme complète pour la gestion des réclamations, interventions client
                    et suivi des tickets SAV.
                </p>

                <div class="hero-actions">
                    <a href="/login" class="btn btn-primary btn-shine">
                        <i class="fas fa-sign-in-alt me-2 icon-float"></i>Se connecter
                    </a>
                    <a href="/register" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2 icon-float"></i>Créer un compte
                    </a>
                </div>

                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">99.9%</div>
                        <div class="stat-label">Disponibilité</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">24/7</div>
                        <div class="stat-label">Support</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">100%</div>
                        <div class="stat-label">Sécurité</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Animated background shapes -->
        <div class="hero-background">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="section-header">
                <h2>Fonctionnalités complètes pour votre SAV</h2>
                <p class="section-subtitle">Tout ce dont vous avez besoin pour un service client exceptionnel</p>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-ticket-alt icon-float"></i>
                    </div>
                    <h3>Gestion des tickets</h3>
                    <p>Créez, suivez et gérez tous vos tickets SAV depuis une interface centralisée.</p>
                    <ul class="feature-list">
                        <li>Création rapide de tickets</li>
                        <li>Assignation aux techniciens</li>
                        <li>Historique complet</li>
                    </ul>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line icon-float"></i>
                    </div>
                    <h3>Analyses et rapports</h3>
                    <p>Obtenez des insights sur les performances du service client avec des rapports détaillés.</p>
                    <ul class="feature-list">
                        <li>Statistiques en temps réel</li>
                        <li>Rapports personnalisés</li>
                        <li>Indicateurs clés</li>
                    </ul>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users-cog icon-float"></i>
                    </div>
                    <h3>Gestion d'équipe</h3>
                    <p>Organisez votre équipe SAV avec des rôles, permissions et suivi des activités.</p>
                    <ul class="feature-list">
                        <li>Multi-utilisateurs</li>
                        <li>Rôles et permissions</li>
                        <li>Suivi des performances</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Prêt à optimiser votre service client ?</h2>
                <p>Rejoignez la plateforme et transformez votre gestion SAV dès aujourd'hui</p>
                <div class="cta-actions">
                    <a href="/register" class="btn btn-light btn-lg btn-shine-dark">
                        <i class="fas fa-rocket me-2 icon-float"></i>Commencer gratuitement
                    </a>
                    <a href="/login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2 icon-float"></i>Se connecter
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="index-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-left">
                    <p>
                        <i class="fas fa-info-circle me-2"></i>
                        Service Après-Vente © @DateTime.Now.Year - Tous droits réservés
                    </p>
                </div>
                <div class="footer-right">
                    <a href="#"><i class="fas fa-shield-alt me-1"></i>Sécurité</a>
                    <a href="#"><i class="fas fa-question-circle me-1"></i>Aide</a>
                    <a href="#"><i class="fas fa-envelope me-1"></i>Contact</a>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    :root {
        --primary: #4361ee;
        --primary-dark: #3a56d4;
        --secondary: #7209b7;
        --dark: #212529;
        --light: #f8f9fa;
        --white: #ffffff;
        --gray: #6c757d;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --shadow: 0 12px 32px rgba(0,0,0,0.10);
        --radius: 14px;
        --transition: all .25s ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: var(--dark);
        line-height: 1.6;
        background: #fff;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* ===== Page Enter ===== */
    .page-enter {
        animation: pageEnter .35s ease both;
    }

    @@keyframes pageEnter {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ===== HERO ===== */
    .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        background: var(--gradient);
        overflow: hidden;
        color: var(--white);
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 860px;
        margin: 0 auto;
        text-align: center;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: rgba(255,255,255,0.18);
        padding: 8px 18px;
        border-radius: 999px;
        font-size: .9rem;
        margin-bottom: 1.8rem;
        backdrop-filter: blur(10px);
        font-weight: 700;
        border: 1px solid rgba(255,255,255,.18);
        animation: fadeInUp .6s ease both;
    }

    .hero-title {
        font-size: clamp(2.1rem, 4.2vw, 3.6rem);
        font-weight: 900;
        margin-bottom: 1.2rem;
        line-height: 1.15;
        animation: fadeInUp .7s ease both;
        animation-delay: .05s;
    }

    .hero-subtitle {
        font-size: clamp(1.05rem, 2vw, 1.35rem);
        margin-bottom: 2.2rem;
        opacity: 0.92;
        max-width: 650px;
        margin-left: auto;
        margin-right: auto;
        animation: fadeInUp .75s ease both;
        animation-delay: .1s;
    }

    .hero-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 3.2rem;
        animation: fadeInUp .8s ease both;
        animation-delay: .15s;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 26px;
        border-radius: var(--radius);
        font-weight: 750;
        text-decoration: none;
        transition: var(--transition);
        border: 2px solid transparent;
        font-size: 1rem;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transform: translateZ(0);
    }

    .btn-primary {
        background: var(--white);
        color: var(--primary);
        box-shadow: 0 10px 24px rgba(0,0,0,0.12);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.16);
        }

    .btn-outline-primary {
        border-color: rgba(255,255,255,0.9);
        color: var(--white);
        background: transparent;
    }

        .btn-outline-primary:hover {
            background: var(--white);
            color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.14);
        }

    /* Shine effect */
    .btn-shine::before,
    .btn-shine-dark::before {
        content: '';
        position: absolute;
        top: 0;
        left: -120%;
        width: 70%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.35), transparent);
        transform: skewX(-20deg);
    }

    .btn-shine:hover::before,
    .btn-shine-dark:hover::before {
        animation: shine .7s ease;
    }

    @@keyframes shine {
        to {
            left: 140%;
        }
    }

    .hero-stats {
        display: flex;
        justify-content: center;
        gap: clamp(1.5rem, 5vw, 4rem);
        margin-top: 1.2rem;
        flex-wrap: wrap;
        animation: fadeInUp .85s ease both;
        animation-delay: .2s;
    }

    .stat-item {
        text-align: center;
        min-width: 160px;
        padding: 14px 16px;
        border-radius: var(--radius);
        background: rgba(255,255,255,0.12);
        border: 1px solid rgba(255,255,255,0.18);
        backdrop-filter: blur(10px);
        transition: var(--transition);
    }

        .stat-item:hover {
            transform: translateY(-3px) scale(1.02);
        }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 900;
        margin-bottom: .2rem;
        letter-spacing: -.5px;
    }

    .stat-label {
        font-size: .85rem;
        opacity: .85;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Hero background shapes */
    .hero-background {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .shape {
        position: absolute;
        border-radius: 999px;
        background: rgba(255,255,255,0.10);
        filter: blur(0px);
        animation: floatY 6s ease-in-out infinite;
    }

    .shape-1 {
        width: 320px;
        height: 320px;
        top: -160px;
        right: -160px;
        animation-delay: .2s;
    }

    .shape-2 {
        width: 220px;
        height: 220px;
        bottom: 90px;
        left: -110px;
        animation-delay: .8s;
    }

    .shape-3 {
        width: 160px;
        height: 160px;
        bottom: 200px;
        right: 18%;
        animation-delay: 1.2s;
    }

    .shape-4 {
        width: 120px;
        height: 120px;
        top: 18%;
        left: 18%;
        animation-delay: .5s;
        opacity: .08;
    }

    @@keyframes floatY {
        0% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-14px);
        }

        100% {
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(12px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Small icon float (no rotate) */
    .icon-float {
        display: inline-block;
        animation: iconFloat 3.2s ease-in-out infinite;
        transform-origin: center;
    }

    @@keyframes iconFloat {
        0% {
            transform: translateY(0) scale(1);
        }

        50% {
            transform: translateY(-3px) scale(1.06);
        }

        100% {
            transform: translateY(0) scale(1);
        }
    }

    /* ===== FEATURES ===== */
    .features-section {
        padding: 100px 0;
        background: var(--light);
    }

    .section-header {
        text-align: center;
        margin-bottom: 3.2rem;
    }

        .section-header h2 {
            font-size: clamp(1.8rem, 3vw, 2.6rem);
            font-weight: 900;
            color: var(--dark);
            margin-bottom: .7rem;
        }

    .section-subtitle {
        font-size: 1.15rem;
        color: var(--gray);
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: 1.75rem;
    }

    .feature-card {
        background: var(--white);
        padding: 2.6rem 2rem;
        border-radius: var(--radius);
        text-align: center;
        box-shadow: var(--shadow);
        transition: var(--transition);
        border: 1px solid rgba(0,0,0,0.04);
        position: relative;
        overflow: hidden;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top right, rgba(67,97,238,0.10), transparent 55%);
            opacity: 0;
            transition: var(--transition);
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 18px 44px rgba(0,0,0,0.12);
        }

            .feature-card:hover::before {
                opacity: 1;
            }

    .feature-icon {
        width: 82px;
        height: 82px;
        background: var(--gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.8rem;
        box-shadow: 0 12px 26px rgba(102,126,234,0.25);
    }

        .feature-icon i {
            font-size: 2rem;
            color: var(--white);
        }

    .feature-card h3 {
        font-size: 1.45rem;
        font-weight: 850;
        margin-bottom: .85rem;
        color: var(--dark);
    }

    .feature-card p {
        color: var(--gray);
        margin-bottom: 1.6rem;
        line-height: 1.6;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        text-align: left;
        margin: 0 auto;
        max-width: 260px;
    }

        .feature-list li {
            padding: .45rem 0;
            color: var(--gray);
            position: relative;
            padding-left: 1.5rem;
        }

            .feature-list li:before {
                content: "✓";
                color: #2ecc71;
                position: absolute;
                left: 0;
                font-weight: 900;
            }

    /* ===== CTA ===== */
    .cta-section {
        background: #15181f;
        color: var(--white);
        padding: 95px 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .cta-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 20%, rgba(114,9,183,0.35), transparent 55%), radial-gradient(circle at 80% 60%, rgba(67,97,238,0.35), transparent 55%);
            opacity: .55;
            pointer-events: none;
        }

    .cta-content {
        position: relative;
        z-index: 1;
        max-width: 850px;
        margin: 0 auto;
    }

        .cta-content h2 {
            font-size: clamp(1.9rem, 3vw, 2.6rem);
            font-weight: 900;
            margin-bottom: .9rem;
        }

        .cta-content p {
            font-size: 1.15rem;
            margin-bottom: 2.4rem;
            opacity: 0.85;
        }

    .cta-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-lg {
        padding: 14px 28px;
        font-size: 1.05rem;
    }

    .btn-light {
        background: var(--white);
        color: var(--dark);
        box-shadow: 0 12px 26px rgba(0,0,0,0.18);
    }

        .btn-light:hover {
            transform: translateY(-2px);
        }

    .btn-outline-light {
        border-color: rgba(255,255,255,0.85);
        color: var(--white);
        background: transparent;
    }

        .btn-outline-light:hover {
            background: var(--white);
            color: var(--dark);
            transform: translateY(-2px);
        }

    /* ===== FOOTER ===== */
    .index-footer {
        background: var(--white);
        border-top: 1px solid rgba(0,0,0,0.08);
        padding: 1.25rem 0;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .footer-left p {
        display: flex;
        align-items: center;
        color: var(--gray);
        font-size: .92rem;
        margin: 0;
    }

    .footer-right {
        display: flex;
        gap: 1.4rem;
        flex-wrap: wrap;
    }

        .footer-right a {
            color: var(--gray);
            text-decoration: none;
            font-size: .92rem;
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

            .footer-right a:hover {
                color: var(--primary);
            }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .features-section {
            padding: 70px 0;
        }

        .cta-section {
            padding: 70px 0;
        }
    }

    @@media (max-width: 480px) {
        .hero-actions .btn {
            width: 100%;
            max-width: 360px;
        }

        .cta-actions .btn {
            width: 100%;
            max-width: 360px;
        }
    }

    /* Respect reduced motion */
    @@media (prefers-reduced-motion: reduce) {
        * {
            animation: none !important;
            transition: none !important;
        }
    }
</style>
